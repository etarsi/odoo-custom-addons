<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_web_res_config_settings_base_setup" model="ir.ui.view">
        <field name="name">Configuracion de password fotos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='unsplash']" position="after">
                <h2>Acceso al Drive y Contraseña de la tienda</h2>
                <div class="row mt16 o_settings_container" name="config_google_drive">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label"> ID de Carpeta en Drive</span>
                            <div class="text-muted">
                                ... Aca se define la ID de la carpeta en Drive donde se almacenan las imagenes de los productos de SEBIGUS.
                            </div>
                            <div class="text-muted">
                                <field name="sheet_drive_folder_path"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label"> Contraseña de acceso a la tienda de Productos SEBIGUS</span>
                            <div class="text-muted">
                                ... Aca se define la contraseña para acceder a la tienda de productos SEBIGUS.
                            </div>
                            <div class="text-muted">
                                <field name="shop_gate_password"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
