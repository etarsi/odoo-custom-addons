<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_web_res_config_settings_base_setup" model="ir.ui.view">
        <field name="name">Configuracion de password fotos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="after">
                <block title="Configuracion de password fotos y drive" name="drive_integration_block" class="o_setting_box">
                    <!-- Carpeta de Drive -->
                    <setting string="Drive - Carpeta principal" id="setting_sheet_drive_folder_path"
                            help="ID de la carpeta PADRE en Google Drive (donde están las subcarpetas de cada producto).">
                    <field name="sheet_drive_folder_path" placeholder="1AbCDefGhIJ..."/>
                    </setting>

                    <!-- Contraseña para /shop -->
                    <setting string="Contraseña de acceso a /shop" id="setting_shop_gate_password"
                            help="Clave que se pedirá antes de acceder a /shop.">
                    <field name="shop_gate_password" password="True" placeholder="••••••••"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
