<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_form_zip_by_code_btn" model="ir.ui.view">
        <field name="name">product.template.form.gdrive.zip.by.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Botón para descargar ZIP por código 
            <xpath expr="//header" position="inside">
                <button name="action_zip_by_default_code_from_main_folder"
                        type="object"
                        string="ZIP por Código"
                        class="oe_highlight"/>
            </xpath>
            -->

            <!-- Campo para pegar el Folder ID principal -->
            <xpath expr="//group/group" position="inside">
                <field name="gdrive_folder_id"/>
            </xpath>
        </field>
    </record>
</odoo>
