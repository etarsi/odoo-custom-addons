<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ====== Extiendo formulario de Product Template ====== -->
    <record id="view_product_template_form_inherit_gdrive" model="ir.ui.view">
        <field name="name">product.template.form.gdrive.gallery</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Campo para folder de Drive -->
            <xpath expr="//group[@name='sales']" position="after">
                <group string="Google Drive">
                    <field name="gdrive_folder_id" placeholder="1aBcD... (folderId)"/>
                    <button name="action_download_images_from_drive"
                            type="object"
                            class="oe_highlight"
                            string="Descargar imágenes de Drive"/>
                    <button name="action_open_gallery"
                            type="object"
                            string="Abrir galería"/>
                </group>
            </xpath>

            <!-- Smart button a la Galería -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_open_gallery" class="oe_stat_button" icon="fa-picture-o">
                    <field name="product_template_image_ids" widget="statinfo"/>
                    <span class="o_stat_text">Galería</span>
                </button>
            </xpath>
        </field>
    </record>

    <!-- ====== Kanban para product.image ====== -->
    <record id="view_product_image_kanban_gallery" model="ir.ui.view">
        <field name="name">product.image.kanban.gallery</field>
        <field name="model">product.image</field>
        <field name="arch" type="xml">
            <kanban default_group_by="product_tmpl_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="image_1920"/>
                <field name="gdrive_file_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.image','image_1920',record.id.value)"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong><t t-esc="record.name.value"/></strong>
                                <div t-if="record.gdrive_file_id.value" class="text-muted">
                                    Drive ID: <t t-esc="record.gdrive_file_id.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ====== Acción para abrir la galería (por si querés tenerla como acción directa) ====== -->
    <record id="action_product_image_gallery" model="ir.actions.act_window">
        <field name="name">Galería de Imágenes</field>
        <field name="res_model">product.image</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
