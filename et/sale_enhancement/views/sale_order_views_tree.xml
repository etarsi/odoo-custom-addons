<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Heredar la vista de formulario de sale.order -->
        <record id="view_order_form_company_default" model="ir.ui.view">
            <field name="name">sale.order.form.company.default</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <!-- attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"-->
                    <button name="%(sale_enhancement.action_sale_order_tipo_venta_wizard)d"
                            string="Cambiar tipo de venta"
                            type="action"
                            class="btn-secondary"
                            groups="sale_enhancement.group_sale_order_special_permissions"/>
                    
                </xpath>
                <!-- En el button box de Odoo -->
                <!-- <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <field name="transfer_id" invisible="1"/>
                    <button type="object"
                            name="action_open_wms_transfer"
                            class="oe_stat_button"
                            icon="fa-exchange"
                            attrs="{'invisible': [('transfer_id', '=', False)]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Transferencia</span>
                        </div>
                    </button>
                </xpath>-->
                <xpath expr="//page[@name='other_information']//field[@name='company_id']" position="after">
                    <field name="company_default" string="Compañía Forzada" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                </xpath>
                <!-- hacer invisible la company_id -->
                <xpath expr="//page[@name='other_information']//field[@name='company_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- agregar company_id debajo de sale_order_template_id -->
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="company_id" string="Compañía" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                    <field name="is_marketing" string="Venta Marketing" attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])]}" />
                </xpath>
                <!-- Oculta la columna Producto (product_id) cuando el pedido/linea está sale/done/cancel
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="attrs">{'column_invisible': [('parent.state', 'in', ['sale','done','cancel'])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_template_id']" position="attributes">
                    <attribute name="attrs">{'column_invisible': [('parent.state', 'in', ['sale','done','cancel'])]}</attribute>
                </xpath> -->
            </field>
        </record>

        <record id="view_order_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='state']" position="after">
                    <field name="items_ids" widget="many2many_tags" optional="hide"/>
                    <field name="partner_tag_ids" widget="many2many_tags" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Heredar la vista de búsqueda -->
        <record id="sale_order_view_search_partner_tag" model="ir.ui.view">
            <field name="name">sale.order.view.search.partner.tag</field>
            <field name="model">sale.order</field>
            <!-- Esta es la que vos nombraste -->
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="arch" type="xml">
                <!-- Agregar la opción de Agrupar por Etiquetas del Cliente -->
                <xpath expr="//filter[@name='to_invoice']" position="before">
                    <separator/>
                    <filter name="groupby_partner_tag"
                        string="Etiquetas del Cliente"
                        context="{'group_by': 'partner_tag_ids'}"/>
                    <separator/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
