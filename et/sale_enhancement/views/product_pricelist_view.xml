<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_pricelist_tree" model="ir.ui.view">
            <field name="name">view.product.pricelist.tree</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="is_default" optional="show"/>
                    <field name="list_default_b" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_pricelist_form" model="ir.ui.view">
            <field name="name">view.product.pricelist.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_group_ids']" position="after">
                    <field name="is_default"/>
                    <field name="list_default_b"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
