<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- TREE -->
    <record id="view_tms_stock_picking_tree_enhancement" model="ir.ui.view">
        <field name="name">tms.stock.picking.tree.enhancement</field>
        <field name="model">tms.stock.picking</field>
        <field name="inherit_id" ref="tms_service.view_tms_stock_picking_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="wms_task_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_tms_stock_picking_form_enhancement" model="ir.ui.view">
        <field name="name">tms.stock.picking.form.enhancement</field>
        <field name="model">tms.stock.picking</field>
        <field name="inherit_id" ref="tms_service.view_tms_stock_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='items_ids']" position="after">
                <field name="wms_task_id"/>
            </xpath>
        </field>
    </record>
</odoo>