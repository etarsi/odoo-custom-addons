<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================================================
        WMS TASK - TREE
    ========================================================== -->
    <record id="view_wms_task_tree" model="ir.ui.view">
        <field name="name">wms.task.tree</field>
        <field name="model">wms.task</field>
        <field name="arch" type="xml">
            <tree string="Tareas WMS" default_order="create_date desc">
                <header>
                    <button name="send_and_receive_digip" type="object" string="Enviar y Recibir Digip"/>             
                </header>        
                <field name="create_date" widget="remaining_days" string="Fecha"/>
                <field name="name" string="Tarea"/>                
                <field name="partner_id" string="Contacto"/>
                <field name="partner_address_id" string="Dirección de Entrega" optional="hide"/>
                <field name="assigned_user_id"/>
                <field name="transfer_id"/>
                <field name="origin"/>
    
                <field name="priority" optional="hide"/>
                <field name="bultos_count" optional="show"/>

                <field name="date_start" optional="hide"/>
                <field name="date_done" optional="hide"/>

                <field name="container" optional="hide"/>
                <field name="dispatch" optional="hide"/>
                <field name="license" optional="hide" widget="badge"/>
                
                
                <field name="percent_complete" widget="percentage"/> 

                <field name="type" widget="badge" decoration-danger="type=='return'" decoration-info="type=='reception'" decoration-primary="type=='fraction'" decoration-success="type=='preparation'" decoration-warning="type=='replenish'" decoration-bf="type=='relocate'"/>
                <field name="digip_state" widget="badge" decoration-warning="digip_state == 'sent'" decoration-success="digip_state == 'received'"/>
                <!-- <field name="state_preparation" widget="badge" attrs="{'column_invisible': [('type', '!=', 'preparation')]}"/> -->
            </tree>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK - SEARCH
    ========================================================== -->
    <record id="view_wms_task_search" model="ir.ui.view">
        <field name="name">wms.task.search</field>
        <field name="model">wms.task</field>
        <field name="arch" type="xml">
            <search string="Buscar Tareas">
                <field name="name" string="Tarea"/>
                <field name="partner_id"/>
                <field name="assigned_user_id"/>
                <field name="transfer_id"/>
                <field name="container"/>
                <field name="dispatch"/>


                <!-- Estados -->
                <!-- <filter string="Borrador" name="st_draft" domain="[('state','=','draft')]"/>
                <filter string="Pendiente" name="st_pending" domain="[('state','=','pending')]"/>
                <filter string="Confirmado" name="st_confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="En Proceso" name="st_process" domain="[('state','=','process')]"/>
                <filter string="Hecho" name="st_done" domain="[('state','=','done')]"/> -->

                <separator/>

                <!-- Tipos -->
                <filter string="Recepción" name="tp_reception" domain="[('type','=','reception')]"/>
                <filter string="Preparación" name="tp_preparation" domain="[('type','=','preparation')]"/>
                <filter string="Control" name="tp_control" domain="[('type','=','control')]"/>
                <filter string="Desarmar" name="tp_undo" domain="[('type','=','undo')]"/>
                <filter string="Fraccionado" name="tp_fraction" domain="[('type','=','fraction')]"/>
                <filter string="Reposición" name="tp_replenish" domain="[('type','=','replenish')]"/>

                <group expand="0" string="Agrupar por">
                    <filter string="Tipo" name="group_type" context="{'group_by':'type'}"/>
                    <!-- <filter string="Estado" name="group_state" context="{'group_by':'state'}"/> -->
                    <filter string="Asignado a" name="group_user" context="{'group_by':'assigned_user_id'}"/>
                    <filter string="Transferencia" name="group_transfer" context="{'group_by':'transfer_id'}"/>
                    <filter string="Pedido" name="group_order" context="{'group_by':'origin'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK - FORM
    ========================================================== -->
    <record id="view_wms_task_form" model="ir.ui.view">
        <field name="name">wms.task.form</field>
        <field name="model">wms.task</field>
        <field name="arch" type="xml">
            <form string="Tarea WMS">
                <header>
                    <button name="action_send_task_to_digip" type="object" string="Enviar a Digip" attrs="{'invisible': [('digip_state', '!=', 'no')]}"/>
                    <button name="action_receive_task_digip" type="object" string="Recibir de Digip" attrs="{'invisible': [('digip_state', '!=', 'sent')]}"/>
                    <button name="action_print_remito" class="oe_highlight" type="object" string="IMPRIMIR REMITO" attrs="{'invisible': [('digip_state', '!=', 'received')]}"/>


                    <field name="state_preparation" widget="statusbar" statusbar_visible="pending,preparation,control,delivery"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="transfer_id" invisible="1"/>

                        <button name="action_open_wms_transfer"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-exchange"
                                attrs="{'invisible': [('transfer_id', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Transferencia</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="T012345..." />
                        </h1>
                    </div>

                    <group>
                        <group string="Operación">                        
                            <field name="type"/>
                            <field name="assigned_user_id"/>                            
                            <field name="priority"/>
                            <field name="digip_state" widget="badge" decoration-warning="digip_state == 'sent'" decoration-success="digip_state == 'received'"/>
                        </group>
                        <group string="Tiempos / KPIs">
                            <field name="percent_complete"/>
                            <field name="bultos_count"/>
                            <field name="date_start"/>
                            <field name="date_done"/>
                            <field name="preparation_time"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Líneas">
                            <field name="task_line_ids" context="{'default_task_id': active_id}">
                                <tree editable="bottom" string="Líneas de Tarea">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="quantity_picked"/>
                                    <field name="quantity_controlled"/>
                                    <!-- <field name="quantity_controlled" attrs="{'column_invisible': [('state_preparation', 'in', ('no', 'pending', 'preparation'))]}"/> -->
                                </tree>

                                <form string="Línea de Tarea">
                                    <group>
                                        <field name="task_id" readonly="1"/>
                                        <field name="product_id"/>
                                    </group>
                                    <group string="Cantidades">
                                        <group>
                                            <field name="quantity"/>
                                            <field name="quantity_picked"/>
                                        </group>
                                        <group>
                                            <field name="quantity_controlled"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Detalle">
                            <!-- RECEPCIÓN -->

                            <group string="General">
                                <field name="transfer_id"/>
                            </group>
                            <group>
                                <group string="Recepción" attrs="{'invisible':[('type','!=','reception')]}">
                                    <group>
                                        <field name="partner_id" string="Proveedor"/>
                                    </group>
                                    <group>
                                        <field name="dispatch"/>
                                        <field name="container"/>
                                        <field name="license"/>
                                    </group>
                                </group>

                                <!-- PREPARACIÓN -->
                                <group string="Preparación" attrs="{'invisible':[('type','!=','preparation')]}">
                                    <field name="partner_id" string="Cliente"/>
                                </group>
                            </group>
                            
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK - ACTION
    ========================================================== -->
    <record id="action_wms_task" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">wms.task</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_wms_task_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Creá tu primera Tarea WMS
            </p>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK LINE - TREE
    ========================================================== -->
    <record id="view_wms_task_line_tree" model="ir.ui.view">
        <field name="name">wms.task.line.tree</field>
        <field name="model">wms.task.line</field>
        <field name="arch" type="xml">
            <tree string="Líneas de Tarea">
                <field name="task_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="quantity_picked"/>
                <field name="quantity_controlled"/>
            </tree>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK LINE - SEARCH
    ========================================================== -->
    <record id="view_wms_task_line_search" model="ir.ui.view">
        <field name="name">wms.task.line.search</field>
        <field name="model">wms.task.line</field>
        <field name="arch" type="xml">
            <search string="Buscar Líneas de Tarea">
                <field name="task_id"/>
                <field name="product_id"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Tarea" name="group_task" context="{'group_by':'task_id'}"/>
                    <filter string="Producto" name="group_product" context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK LINE - FORM
    ========================================================== -->
    <record id="view_wms_task_line_form" model="ir.ui.view">
        <field name="name">wms.task.line.form</field>
        <field name="model">wms.task.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Tarea">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Línea..." />
                        </h1>
                    </div>

                    <group>
                        <field name="task_id"/>
                        <field name="product_id"/>
                    </group>

                    <group string="Cantidades">
                        <group>
                            <field name="quantity"/>
                            <field name="quantity_picked"/>
                        </group>
                        <group>
                            <field name="quantity_controlled"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================================================
        WMS TASK LINE - ACTION
    ========================================================== -->
    <record id="action_wms_task_line" model="ir.actions.act_window">
        <field name="name">Líneas de Tarea</field>
        <field name="res_model">wms.task.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_wms_task_line_search"/>
        <field name="context">{}</field>
    </record>


</odoo>