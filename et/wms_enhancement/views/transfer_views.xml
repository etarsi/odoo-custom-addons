<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================================================
        WMS TRANSFER - ACTION         <field name="search_view_id" ref="view_wms_transfer_search"/>
    ========================================================== -->
    <record id="action_wms_transfer" model="ir.actions.act_window">
        <field name="name">Transferencias</field>
        <field name="res_model">wms.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Creá tu primera Transferencia WMS
            </p>
        </field>
    </record>

    <record id="action_wms_task_from_transfer" model="ir.actions.act_window">
      <field name="name">Tareas</field>
      <field name="res_model">wms.task</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('transfer_id', '=', active_id)]</field>
      <field name="context">
          {
              'default_transfer_id': active_id,
              'search_default_transfer_id': active_id
          }
      </field>
    </record>



    <!-- =========================================================
        WMS TRANSFER - TREE
    ========================================================== -->
    <record id="view_wms_transfer_tree" model="ir.ui.view">
        <field name="name">wms.transfer.tree</field>
        <field name="model">wms.transfer</field>
        <field name="arch" type="xml">
            <tree string="Transferencias WMS" default_order="desc create_date">
                <header>
                    <button name="action_split_into_tasks" type="object" string="Crear Tareas"/>
                </header>
                <field name="create_date" widget="remaining_days" string="Fecha"/>
                <field name="name" string="Nombre"/>
                <field name="origin"/>
                <field name="partner_id" optional="hide"/>
                <field name="partner_address_id"/>
                <!-- <field name="partner_tag"/>
                <field name="partner_tag"/> -->
                <field name="total_bultos" sum="total" optional="show"/>
                <field name="total_bultos_prepared" sum="total" optional="show"/>
                <field name="total_available_percentage" string="Disponible" optional="show" widget="percentage"/>
                <field name="operation_type" string="Tipo" widget="badge" decoration-info="operation_type=='ingoing'" decoration-danger="operation_type=='return'" decoration-primary="operation_type=='outgoing'"/>
                <field name="state" widget="badge" decoration-danger="state=='no'" decoration-warning="state=='pending'" decoration-info="state=='process'" decoration-success="state=='finished'"/>
            </tree>
        </field>
    </record>

    <!-- =========================================================
        WMS TRANSFER - SEARCH
    ========================================================== -->
    <record id="view_wms_transfer_search" model="ir.ui.view">
        <field name="name">wms.transfer.search</field>
        <field name="model">wms.transfer</field>
        <field name="arch" type="xml">
            <search string="Buscar Transferencias">
                <field name="name" string="Transferencia"/>
                <field name="partner_id"/>
                <field name="partner_address_id"/>
                <field name="sale_id"/>
                <field name="purchase_id"/>


                <filter string="Ingreso" name="incoming" domain="[('operation_type','=','incoming')]"/>
                <filter string="Entrega" name="outgoing" domain="[('operation_type','=','outgoing')]"/>

                <group expand="0" string="Agrupar por">
                    <filter string="Tipo" name="group_operation" context="{'group_by':'operation_type'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Cliente" name="group_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Pedido" name="group_origin" context="{'group_by':'origin'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- =========================================================
        WMS TRANSFER - FORM
    ========================================================== -->
    <record id="view_wms_transfer_form" model="ir.ui.view">
        <field name="name">wms.transfer.form</field>
        <field name="model">wms.transfer</field>
        <field name="arch" type="xml">
            <form string="Transferencia WMS">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="pending,process,finished"/>

                    <button name="action_split_into_tasks" type="object" string="Crear Tareas" attrs="{'invisible': [('state', '=', 'finished')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="purchase_id" invisible="1"/>
                        <field name="preselection_id" invisible="1"/>
                        <field name="sale_id" invisible="1"/>

                        <button name="action_open_purchase"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                attrs="{'invisible': [('purchase_id', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Pedido de Compra</span>
                            </div>
                        </button>

                        <button name="action_open_preselection"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                attrs="{'invisible': [('preselection_id', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Preselección</span>
                            </div>
                        </button>
                        
                        <button name="action_open_sale"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                attrs="{'invisible': [('sale_id', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Pedido de Venta</span>
                            </div>
                        </button>

                        <button type="action"
                                name="%(action_wms_task_from_transfer)d"
                                class="oe_stat_button"
                                icon="fa-tasks"
                                context="{'default_transfer_id': active_id}">
                            <field name="task_count" widget="statinfo" string="Tareas"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="TRF/..." />
                        </h1>
                    </div>

                    <group>
                        <group string="Cliente / Entrega">
                            <field name="partner_id" readonly="1"/>
                            <field name="partner_address_id" readonly="1"/>
                        </group>

                        <group string="Operación">
                            <field name="create_date" string="Fecha Transferencia"/>
                            <field name="operation_type" readonly="1"/>
                            <field name="sale_type" string="Tipo de Facturación" readonly="1"/>
                        </group>                        
                    </group>

                    <group string="Origen">
                        <group>
                            <field name="origin"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Líneas de Transferencia">
                            <field name="available_line_ids">
                                <tree editable="bottom" string="Líneas de Transferencia" default_order="bultos_available desc, available_percent desc">
                                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'pending'" decoration-info="state == 'preparation'"/>
                                    <field name="invoice_state" widget="badge" decoration-success="state == 'total'" decoration-warning="state == 'partial'" decoration-danger="state == 'no'"/>
                                    <field name="product_id"/>
                                    <field name="lot_name"/>
                                    <field name="bultos"/>
                                    <field name="uxb"/>
                                    <field name="qty_demand"/>
                                    <field name="qty_pending"/>
                                    <field name="qty_done"/>
                                    <field name="qty_invoiced"/>
                                    <field name="bultos_available"/>                     
                                    <field name="available_percent"/>                   
                                    <field name="availability"/>
                                    <field name="sale_line_id" optional="hide"/>
                                </tree>

                                <form string="Línea de Transferencia">
                                    <group>
                                        <group>
                                            <field name="transfer_id" readonly="1"/>
                                            <field name="state"/>
                                            <field name="invoice_state"/>
                                            <field name="product_id"/>
                                            <field name="sale_line_id"/>
                                        </group>
                                        <group>
                                            <field name="lot_name"/>
                                            <field name="uxb"/>
                                            <field name="availability"/>
                                            <field name="available_percent"/>
                                        </group>
                                    </group>

                                    <group string="Cantidades">
                                        <group>
                                            <field name="qty_demand"/>
                                            <field name="qty_done"/>
                                        </group>
                                        <group>
                                            <field name="qty_invoiced"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>



    <!-- =========================================================
        WMS TRANSFER LINE - TREE
    ========================================================== -->
    <record id="view_wms_transfer_line_tree" model="ir.ui.view">
        <field name="name">wms.transfer.line.tree</field>
        <field name="model">wms.transfer.line</field>
        <field name="arch" type="xml">
            <tree string="Líneas de Transferencia">
                <field name="transfer_id"/>
                <field name="state"/>
                <field name="invoice_state"/>
                <field name="product_id"/>
                <field name="lot_name"/>
                <field name="uxb"/>
                <field name="availability"/>
                <field name="available_percent"/>
                <field name="qty_demand"/>
                <field name="qty_done"/>
                <field name="qty_invoiced"/>
                <field name="sale_line_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- =========================================================
        WMS TRANSFER LINE - SEARCH
    ========================================================== -->
    <record id="view_wms_transfer_line_search" model="ir.ui.view">
        <field name="name">wms.transfer.line.search</field>
        <field name="model">wms.transfer.line</field>
        <field name="arch" type="xml">
            <search string="Buscar Líneas">
                <field name="transfer_id"/>
                <field name="product_id"/>
                <field name="lot_name"/>
                <field name="sale_line_id"/>

                <separator/>

                <filter string="Pendiente" name="st_pending" domain="[('state','=','pending')]"/>
                <filter string="En Preparación" name="st_prep" domain="[('state','=','preparation')]"/>
                <filter string="Hecho" name="st_done" domain="[('state','=','done')]"/>

                <separator/>

                <filter string="No Facturado" name="inv_no" domain="[('invoice_state','=','no')]"/>
                <filter string="Parcial" name="inv_partial" domain="[('invoice_state','=','partial')]"/>
                <filter string="Facturado" name="inv_total" domain="[('invoice_state','=','total')]"/>

                <group expand="0" string="Agrupar por">
                    <filter string="Transferencia" name="group_transfer" context="{'group_by':'transfer_id'}"/>
                    <filter string="Producto" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- =========================================================
        WMS TRANSFER LINE - FORM
    ========================================================== -->
    <record id="view_wms_transfer_line_form" model="ir.ui.view">
        <field name="name">wms.transfer.line.form</field>
        <field name="model">wms.transfer.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Transferencia">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Línea..." />
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="transfer_id"/>
                            <field name="state"/>
                            <field name="invoice_state"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="sale_line_id"/>
                            <field name="lot_name"/>
                        </group>
                    </group>

                    <group string="Disponibilidad">
                        <group>
                            <field name="availability"/>
                            <field name="available_percent"/>
                        </group>
                        <group>
                            <field name="uxb"/>
                        </group>
                    </group>

                    <group string="Cantidades">
                        <group>
                            <field name="qty_demand"/>
                            <field name="qty_done"/>
                        </group>
                        <group>
                            <field name="qty_invoiced"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================================================
        WMS TRANSFER LINE - ACTION
    ========================================================== -->
    <record id="action_wms_transfer_line" model="ir.actions.act_window">
        <field name="name">Líneas de Transferencia</field>
        <field name="res_model">wms.transfer.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_wms_transfer_line_search"/>
        <field name="context">{}</field>
    </record>


</odoo>