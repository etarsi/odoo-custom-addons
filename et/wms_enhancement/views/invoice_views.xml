<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form_inherit_wms_task_button" model="ir.ui.view">
        <field name="name">account.move.form.inherit.wms.task.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">

                <field name="task_id" invisible="1"/>

                <button type="object"
                        name="action_open_wms_task"
                        class="oe_stat_button"
                        icon="fa-tasks"
                        attrs="{'invisible': [('task_id', '=', False)]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Tarea</span>
                    </div>
                </button>

            </xpath>
        </field>
    </record>

</odoo>
