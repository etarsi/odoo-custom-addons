<odoo>
  <record id="view_report_account_deuda_cliente_tree" model="ir.ui.view">
    <field name="name">report.account_deuda_cliente.tree</field>
    <field name="model">report.account_deuda_cliente</field>
    <field name="arch" type="xml">
      <tree string="Composición de Deuda por Cliente">
        <field name="partner_id"/>
        <field name="invoice_date"/>
        <field name="invoice_date_due"/>
        <field name="name"/>
        <field name="amount_total_signed"/>
        <field name="x_amount_paid"/>
        <field name="amount_residual_signed"/>
        <field name="x_accumulated_balance_client"/>
        <field name="company_id"/>
      </tree>
    </field>
  </record>

  <record id="action_account_deuda_cliente" model="ir.actions.act_window">
    <field name="name">Composición de Deuda</field>
    <field name="res_model">report.account_deuda_cliente</field>
    <field name="view_mode">tree</field>
    <field name="target">current</field>
  </record>

  <menuitem id="menu_account_deuda_cliente_root" name="Reportes Contables"/>
  <menuitem id="menu_account_deuda_cliente" name="Composición de Deuda"
            parent="menu_account_deuda_cliente_root"
            action="action_account_deuda_cliente"/>
</odoo>