<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Act_window del wizard (sin binding, la invoca la server action) -->
    <record id="action_open_out_invoice_refacturar_wizard" model="ir.actions.act_window">
        <field name="name">REFACTURAR</field>
        <field name="res_model">out.invoice.refacturar.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Server Action atada a account.move -->
    <record id="action_server_open_out_invoice_refacturar_wizard" model="ir.actions.server">
        <field name="name">Anular y Refacturar facturas</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,tree,kanban,form</field>
        <field name="state">code</field>
        <field name="code"><![CDATA[
recs = records.filtered(lambda m: m.move_type == 'out_invoice')
if not recs:
    raise UserError("SeleccionÃ¡ facturas de cliente (Ventas).")

action = env.ref('account_enhancement.action_open_out_invoice_refacturar_wizard').read()[0]
action['context'] = dict(env.context, default_account_move_ids=[(6, 0, recs.ids)])
]]></field>
    </record>
    <!-- Vista del wizard -->
    <record id="view_out_invoice_refacturar_wizard_form" model="ir.ui.view">
        <field name="name">out.invoice.refacturar.wizard.form</field>
        <field name="model">out.invoice.refacturar.wizard</field>
        <field name="arch" type="xml">
            <form string="Refacturar Factyuras de Cliente">
                <group string="Datos del pedido original">
                    <group>
                        <field name="account_move_ids" widget="many2many_tags" />
                        <field name="company_id"  options="{'no_create': True}" domain="[('id', 'in', [1, 2, 3, 4])]"/>
                    </group>
                    <group>
                        <field name="condicion_m2m_id"  options="{'no_create': True}"/>
                        <field name="pricelist_id" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_invoice_from_out_invoice" type="object" string="Crear facturas" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
