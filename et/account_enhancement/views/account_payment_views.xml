<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_form_view_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.view.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="before">
                <div class="text-danger"
                    style="font-weight:700; font-size:16px; margin:8px 0; white-space:pre-line;"
                    attrs="{'invisible': ['|', ('state','!=','draft'), ('is_effectiveness_text','=', False)]}">
                    <field name="check_effectiveness_text" readonly="1" nolabel="1"/>
                </div>
                <field name="is_effectiveness_text" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
