<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="views_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_resumen_composicion"
                    class="oe_stat_button"
                    icon="fa-list">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Resumen de Composición</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Configuración AFIP Import" name="afip_import_config">
                    <group name="afip_import_group" string="Configuración AFIP Import">
                        <group>
                            <field name="diario_prov_afip_import_id"/>
                            <field name="cuenta_prov_afip_import_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
