<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="mail_template_invoice_facture_client" model="mail.template">
      <field name="name">SEBIGUS - Envío Factura (Diseño)</field>
      <field name="model_id" ref="account.model_account_move"/>
      <field name="email_from">{{ object.company_id.email }}</field>
      <field name="email_to">{{ object.partner_id.email}}</field>
      <field name="subject">Factura {{ object.name }}</field>
      <field name="lang">{{ object.partner_id.lang }}</field>
      <field name="auto_delete" eval="False"/>
      <field name="body_html" type="html">
        <div style="margin:0; padding:0; background:#f6f7fb;">
          <div style="max-width:720px; margin:0 auto; padding:18px;">
            <!-- Header con banner (estilo web) -->
            <div style="border-radius:16px; overflow:hidden; border:1px solid #EAECF0; background:#ffffff;">
              <div>
                <t t-set="base_url" t-value="ctx.get('base_url')"/>
                <img t-att-src="base_url + '/account_enhancement/static/src/img/banner-correo.png'"
                    style="width:100%; display:block; border:0;"
                    alt="BANNER"/>
              </div>

              <div style="padding:18px 18px 6px 18px;">
                <div style="font-family:Arial, sans-serif; font-size:20px; font-weight:700; color:#101828;">
                  Hola, <t t-out="object.partner_id.name"/>
                </div>
                <div style="font-family:Arial, sans-serif; font-size:14px; line-height:1.6; color:#344054; margin-top:10px;">
                  Adjuntamos tu factura <b><t t-out="object.name"/></b> emitida por <b><t t-out="object.company_id.name"/></b>.
                </div>

                <div style="font-family:Arial, sans-serif; font-size:14px; line-height:1.6; color:#344054; margin-top:10px;">
                  Importe total: <b><t t-out="object.amount_total"/> <t t-out="object.currency_id.symbol"/></b>
                  <t t-if="object.invoice_date">
                    Fecha: <b><t t-out="object.invoice_date"/></b>
                  </t>
                </div>

                <div style="font-family:Arial, sans-serif; font-size:13px; color:#475467; line-height:1.6; margin-top:12px;">
                  La factura se adjunta en PDF a este correo. Ante cualquier consulta, respondé este mensaje y te ayudamos.
                </div>

                <div style="font-family:Arial, sans-serif; font-size:13px; color:#667085; margin-top:14px;">
                  Saludos,<br/>
                  <b><t t-out="object.company_id.name"/></b>
                </div>
              </div>

              <!-- Footer -->
              <div style="padding:12px 18px 16px 18px; font-family:Arial, sans-serif; font-size:12px; color:#98A2B3;">
                Este correo fue generado automáticamente por <t t-out="object.company_id.name"/>.
              </div>
            </div>

          </div>
        </div>

      </field>

    </record>
  </data>
</odoo>
