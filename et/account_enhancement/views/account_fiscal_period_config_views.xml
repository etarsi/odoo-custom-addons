<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fiscal_period_config_tree" model="ir.ui.view">
        <field name="name">account.fiscal.period.config.tree</field>
        <field name="model">account.fiscal.period.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>

    <record id="view_fiscal_period_config_form" model="ir.ui.view">
        <field name="name">account.fiscal.period.config.form</field>
        <field name="model">account.fiscal.period.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_management_closure_4_5" type="object"
                            class="oe_highlight"
                            string="Generar Asiento de Cierre 4-5"/>
                    <button name="action_generate_management_closure_1_2_3" type="object"
                            class="oe_highlight"
                            string="Generar Asiento de Cierre 1-2-3"/>
                    <button name="action_generate_opening_entries" type="object"
                            class="oe_highlight"
                            string="Generar Asiento de Apertura"/>
                    <button name="action_lock_period_cut" type="object"
                            class="oe_highlight"
                            string="Bloquear Periodos Anteriores"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <!-- BotÃ³n para ver los asientos contables enlazados-->
                        <button
                            type="object"
                            name="action_view_account_moves"
                            class="oe_stat_button"
                            icon="fa-certificate">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Asientos Contables</span>
                                <span class="o_stat_value">
                                    <field name="account_move_count"/>
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                            <field name="equity_account_id"/> <!-- Campo para seleccionar la cuenta de patrimonio -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fiscal_period_config" model="ir.actions.act_window">
        <field name="name">Ejercicio de Cierre y Apertura</field>
        <field name="res_model">account.fiscal.period.config</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
