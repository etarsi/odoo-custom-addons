<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fiscal_period_config_tree" model="ir.ui.view">
        <field name="name">account.fiscal.period.config.tree</field>
        <field name="model">account.fiscal.period.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="journal_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'open'" decoration-danger="state == 'closed'" decoration-muted="state == 'archived'"/>
            </tree>
        </field>
    </record>

    <record id="view_fiscal_period_config_form" model="ir.ui.view">
        <field name="name">account.fiscal.period.config.form</field>
        <field name="model">account.fiscal.period.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_management_closure" type="object" class="oe_highlight" string="Generar Cierre de Gestión" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                    <button name="action_generate_management_open" type="object" class="oe_highlight" string="Generar Apertura de Gestión" attrs="{'invisible': [('state', '!=', 'closed')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fiscal_period_config" model="ir.actions.act_window">
        <field name="name">Ejercicio de Cierre y Apertura</field>
        <field name="res_model">account.fiscal.period.config</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
