<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- =========================
             SALE ORDER
             ========================= -->
        <record id="sale_order_form_fiscal_lock" model="ir.ui.view">
            <field name="name">sale.order.form.fiscal.lock</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Control Gestión" groups="account_enhancement.group_fiscal_lock_exception">
                        <group>
                            <field name="period_cut_locked"/>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree" position="inside">
                    <field name="period_cut_locked" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- =========================
             PURCHASE ORDER
             ========================= -->
        <record id="purchase_order_form_fiscal_lock" model="ir.ui.view">
            <field name="name">purchase.order.form.fiscal.lock</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Control Gestión" groups="account_enhancement.group_fiscal_lock_exception">
                        <group>
                            <field name="period_cut_locked"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree" position="inside">
                    <field name="period_cut_locked" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- =========================
             ACCOUNT MOVE
             ========================= -->
        <record id="account_move_form_fiscal_lock" model="ir.ui.view">
            <field name="name">account.move.form.fiscal.lock</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Control Gestión" groups="account_enhancement.group_fiscal_lock_exception">
                        <group>
                            <field name="period_cut_locked"/>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//field[@name='line_ids']/tree" position="inside">
                    <field name="period_cut_locked" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                    <field name="period_cut_locked" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- =========================
             ACCOUNT PAYMENT
             ========================= -->
        <record id="account_payment_form_fiscal_lock" model="ir.ui.view">
            <field name="name">account.payment.form.fiscal.lock</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Control Gestión" groups="account_enhancement.group_fiscal_lock_exception">
                        <field name="period_cut_locked"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- =========================
             ACCOUNT PAYMENT GROUP (si usás ese módulo)
             Ajustá inherit_id si difiere en tu base.
             ========================= -->
        <record id="account_payment_group_form_fiscal_lock" model="ir.ui.view">
            <field name="name">account.payment.group.form.fiscal.lock</field>
            <field name="model">account.payment.group</field>
            <field name="inherit_id" ref="account_payment_group.view_account_payment_group_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Control Gestión" groups="account_enhancement.group_fiscal_lock_exception">
                        <field name="period_cut_locked"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
