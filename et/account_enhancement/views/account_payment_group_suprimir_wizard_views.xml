<odoo>
    <record id="view_account_payment_group_suprimir_wizard_form"
            model="ir.ui.view">
        <field name="name">account.payment.group.suprimir.wizard.form</field>
        <field name="model">account.payment.group.suprimir.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmación">
                <group>
                    <p> ¿Está seguro de que desea eliminar/suprimir estos registros?</p>
                </group>
                <footer>
                    <button string="Aceptar"
                            name="action_confirm"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
