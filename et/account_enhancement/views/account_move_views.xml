<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_restriccion_post" model="ir.ui.view">
        <field name="name">account.move.form.confirm</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post'][1]" position="replace">
                <button name="action_post" string="Confirmar" class="oe_highlight" type="object" 
                        groups="account_enhancement.group_confirm_button_facture" data-hotkey="v" 
                        attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('display_inactive_currency_warning','=',True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>


