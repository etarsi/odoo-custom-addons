<!-- views/report_customer_rubro_views.xml -->
<odoo>
    <record id="view_report_factura_proveedor_tree" model="ir.ui.view">
        <field name="name">report.factura.proveedor.tree</field>
        <field name="model">report.factura.proveedor</field>
        <field name="arch" type="xml">
            <tree string="Reporte de Facturas de Proveedor" create="0" edit="0" delete="0">
                <field name="fecha" optional="show"/>
                <field name="tipo" optional="show"/>
                <field name="punto_venta" optional="show"/>
                <field name="numero_factura" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="amount_netgrav_total" sum="Neto Gravado Total" optional="show"/>
                <field name="amount_nograv_total" sum="Neto No Gravado" optional="show"/>
                <field name="amount_op_exentas" sum="Op. Exentas" optional="show"/>
                <field name="amount_otros_trib" sum="Otros Tributos" optional="show"/>
                <field name="amount_iva_total" sum="IVA Total" optional="show"/>
                <field name="amount_total" sum="Total" optional="show"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para el informe de facturación por rubro -->
    <record id="view_report_factura_proveedor_search" model="ir.ui.view">
        <field name="name">report.factura.proveedor.search</field>
        <field name="model">report.factura.proveedor</field>
        <field name="arch" type="xml">
            <search string="Buscar facturación por rubro">
                <field name="partner_id" string="Cliente"/>
                <field name="tipo" string="Tipo de Comprobante"/>
                <separator/>
                <filter name="fecha" string="Fecha" date="fecha"/>
                <filter name="comp_exterior" string="Comprobante Exterior" domain="[('tipo.doc_code_prefix', '=', 'FA-I')]"/>
                <filter name="sin_comp_exterior" string="Sin Comprobante Exterior" domain="[('tipo.doc_code_prefix', '!=', 'FA-I')]"/>
                <separator/>
                <filter string="Fecha"
                    name="filter_fecha"
                    domain="[]"
                    context="{'group_by': 'fecha'}"/>
                <filter string="Compañia"
                    name="filter_company"
                    domain="[]"
                    context="{'group_by': 'company_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_report_factura_proveedor" model="ir.actions.act_window">
        <field name="name">Reporte de Facturas Proveedor</field>
        <field name="res_model">report.factura.proveedor</field>
        <field name="view_mode">tree</field>
        <!--- asignar un filter por defecto -->
        <field name="context">{'search_default_sin_comp_exterior': 1}</field>
    </record>
</odoo>