<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- FILTRO PARA LINEAS DE ASIENTO CONTABLE -->
    <record id="account_move_line_filter_enhancement" model="ir.ui.view">
        <field name="name">account.move.line.filter.enhancement</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <search string="Lineas de Facturacion">
                <field name="move_id"/>
                <field name="name"/>
                <field name="account_id"/>
                <field name="product_id"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Asiento Contable" name="account_move_id" context="{'group_by': 'move_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ordenar líneas del grupo de pagos por importe (menor a mayor) -->
    <record id="view_account_payment_from_group_tree_order_amount" model="ir.ui.view">
        <field name="name">account.payment.from.group.tree.order.amount</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_payment_group.view_account_payment_from_group_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">l10n_ar_amount_company_currency_signed asc</attribute>
            </xpath>
        </field>
    </record>

    <!-- CREAR UNA VISTA TREE DE ACCOUNT_MOVE_LINE -->
    <record id="account_move_line_factura_cliente_tree" model="ir.ui.view">
        <field name="name">account.move.line.factura.cliente.tree</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <tree string="Lineas de Facturación" edit="false" create="false" delete="false" default_order="date desc">
                <field name="date" optional="true"/>
                <field name="move_id" string="Factura/NC" optional="true"/>
                <field name="partner_id" string="Cliente" optional="true"/>
                <field name="product_id" optional="true"/>
                <field name="name" optional="true"/>
                <field name="account_id" optional="true"/>
                <field name="quantity" optional="true"/>
                <field name="product_uom_id" optional="true"/>
                <field name="price_unit" optional="true"/>
                <field name="discount" optional="true"/>
                <field name="tax_ids" optional="true" widget="many2many_tags"/>
                <field name="price_subtotal" optional="true"/>
                <field name="parent_state" widget="badge" decoration-success="parent_state == 'posted'" decoration-info="parent_state == 'draft'" decoration-danger="parent_state == 'cancel'" optional="true"/>
                <field name="currency_id" optional="hide"/>
                <field name="company_id" optional="hide"/>
                <field name="product_uom_category_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- FILTRAR VISTA DE FACTURAS/NC -->
    <record id="account_move_line_filter_factura_cliente" model="ir.ui.view">
        <field name="name">account.move.line.filter.factura.cliente</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <search string="Lineas de Facturacion">
                <field name="move_id" string="Factura/NC"/>
                <field name="name" string="Etiqueta"/>
                <field name="account_id" string="Cuenta"/>
                <field name="product_id" string="Product" filter_domain="['|', '|', '|', ('product_id.default_code', 'ilike', self), ('product_id.default_code', 'ilike', self),('product_id.name', 'ilike', self), ('product_id.barcode', 'ilike', self)]"/>
                <field name="partner_id" string="Cliente"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Facturas/NC" name="account_move_id" context="{'group_by': 'move_id'}"/>
                    <filter string="Producto" name="product_id" context="{'group_by': 'product_id'}"/>
                    <filter string="Cliente" name="partner_id" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACCION PARA VER LAS LINEAS DE FACTURACION DE CLIENTES -->
    <record id="action_account_move_line_factura_cliente" model="ir.actions.act_window">
        <field name="name">Lineas de Facturación Cliente</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account_move_line_factura_cliente_tree"/>
        <field name="search_view_id" ref="account_move_line_filter_factura_cliente"/>   
        <field name="domain">[('move_id.move_type', 'in', ('out_invoice', 'out_refund'))]</field>
    </record>
</odoo>