<!-- views/report_customer_rubro_views.xml -->
<odoo>
    <record id="view_report_customer_rubro_tree" model="ir.ui.view">
        <field name="name">report.customer.comercial.rubro.tree</field>
        <field name="model">report.customer.comercial.rubro</field>
        <field name="arch" type="xml">
            <tree string="Facturación por rubro" create="0" edit="0" delete="0">
                <field name="date" optional="hide"/>
                <field name="partner_id" optional="show"/>
                <field name="comercial_id" optional="show"/>
                <field name="amount_juguetes" sum="Juguetes" optional="show"/>
                <field name="amount_maquillaje" sum="Maquillaje" optional="show"/>
                <field name="amount_rodados" sum="Rodados" optional="show"/>
                <field name="amount_pelotas" sum="Pelotas" optional="show"/>
                <field name="amount_inflables" sum="Inflables" optional="show"/>
                <field name="amount_pst_agua" sum="Pistola de Agua" optional="show"/>
                <field name="amount_vehiculos_b" sum="Vehículos a Batería" optional="show"/>
                <field name="amount_rodados_inf" sum="Rodados Infantiles" optional="show"/>
                <field name="total_amount_rubro" sum="Total" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Acción base (si todavía no la tenés) -->
    <record id="action_report_customer_rubro" model="ir.actions.act_window">
        <field name="name">Facturación por rubro</field>
        <field name="res_model">report.customer.comercial.rubro</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Temporada del Niño: 1/3/2025 al 31/8/2025 -->
    <record id="action_report_customer_rubro_nino_2025" model="ir.actions.act_window">
        <field name="name">Facturación - Día del Niño (2025)</field>
        <field name="res_model">report.customer.comercial.rubro</field>
        <field name="view_mode">tree</field>
        <field name="domain">
            [('date','&gt;=','2025-03-01'),('date','&lt;=','2025-08-31')]
        </field>
    </record>

    <!-- Navidad: 1/9/2025 al 31/1/2026 -->
    <record id="action_report_customer_rubro_navidad_2025_2026" model="ir.actions.act_window">
        <field name="name">Facturación - Navidad (2025)</field>
        <field name="res_model">report.customer.comercial.rubro</field>
        <field name="view_mode">tree</field>
        <field name="domain">
            [('date','&gt;=','2025-09-01'),('date','&lt;=','2026-01-31')]
        </field>
    </record>

    <menuitem id="menu_report_report_nico"
        name="Reportes Nico"
        parent="base.menu_board_root"
        sequence="30"/> 

    <!-- Menús bajo “Reportes Nico” (ajustá el padre) -->
    <menuitem id="menu_report_customer_rubro_nino_2025"
        name="Facturación Niño 2025"
        parent="menu_report_report_nico"
        action="action_report_customer_rubro_nino_2025"
        sequence="1"/>

    <menuitem id="menu_report_customer_rubro_navidad_2025_2026"
        name="Facturación Navidad 2025-2026"
        parent="menu_report_report_nico"
        action="action_report_customer_rubro_navidad_2025_2026"
        sequence="2"/>
</odoo>