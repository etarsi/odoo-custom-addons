<!-- views/report_customer_rubro_views.xml -->
<odoo>
    <record id="view_report_customer_rubro_tree"
            model="ir.ui.view">
        <field name="name">report.customer.comercial.rubro.tree</field>
        <field name="model">report.customer.comercial.rubro</field>
        <field name="arch" type="xml">
            <tree string="Facturación por rubro" create="0" edit="0">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="comercial_id"/>
                <field name="rubro_id"/>
                <field name="amount" sum="Total por rubro"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Acción base (si todavía no la tenés) -->
    <record id="action_report_customer_rubro" model="ir.actions.act_window">
        <field name="name">Facturación por rubro</field>
        <field name="res_model">report.customer.comercial.rubro</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <!-- Temporada del Niño: 1/3/2025 al 31/8/2025 -->
    <record id="action_report_customer_rubro_nino_2025"
            model="ir.actions.act_window">
        <field name="name">Facturación Niño 2025</field>
        <field name="res_model">report.customer.comercial.rubro</field>
        <field name="view_mode">tree,pivot</field>
        <field name="domain">
            [('date','>=','2025-03-01'),('date','<=','2025-08-31')]
        </field>
    </record>

    <!-- Navidad: 1/9/2025 al 31/1/2026 -->
    <record id="action_report_customer_rubro_navidad_2025_2026"
            model="ir.actions.act_window">
        <field name="name">Facturación Navidad 2025-2026</field>
        <field name="res_model">report.customer.comercial.rubro</field>
        <field name="view_mode">tree,pivot</field>
        <field name="domain">
            [('date','>=','2025-09-01'),('date','<=','2026-01-31')]
        </field>
    </record>

    <menuitem id="menu_report_report_nico"
              name="Reportes Nico"
              parent="base.menu_reporting_dashboard"/> 

    <!-- Menús bajo “Reportes Nico” (ajustá el padre) -->
    <menuitem id="menu_report_customer_rubro_nino_2025"
              name="Facturación Niño 2025"
              parent="menu_report_report_nico"
              action="action_report_customer_rubro_nino_2025"
              sequence="1"/>

    <menuitem id="menu_report_customer_rubro_navidad_2025_2026"
              name="Facturación Navidad 2025-2026"
              parent="menu_report_report_nico"
              action="action_report_customer_rubro_navidad_2025_2026"
              sequence="2"/>


    <record id="view_report_customer_rubro_pivot"
            model="ir.ui.view">
        <field name="name">report.customer.comercial.rubro.pivot</field>
        <field name="model">report.customer.comercial.rubro</field>
        <field name="arch" type="xml">
            <pivot string="Facturación por rubro">
                <field name="amount" type="measure"/>
                <!-- Rubros como columnas -->
                <field name="rubro_id" type="col"/>
                <!-- Filas: cliente + comercial -->
                <field name="partner_id" type="row"/>
                <field name="comercial_id" type="row"/>
                <!-- Para agrupar por fecha (mes, año, etc.) -->
                <field name="date" interval="month"/>
            </pivot>
        </field>
    </record>
</odoo>