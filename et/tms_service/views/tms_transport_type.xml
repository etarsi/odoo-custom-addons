<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- FORMULARIO -->
    <record id="view_tms_transport_type_form" model="ir.ui.view">
        <field name="name">tms.transport.type.form</field>
        <field name="model">tms.transport.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Transporte">
                <sheet>
                    <group name="group_transport_type" string="InformaciÃ³n del Tipo de Transporte">
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTA DE LISTADO -->
    <record id="view_tms_transport_type_tree" model="ir.ui.view">
        <field name="name">tms.transport.type.tree</field>
        <field name="model">tms.transport.type</field>
        <field name="arch" type="xml">
            <tree string="Tipo de Transporte" create="true" edit="true" delete="true" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_tms_transport_type" model="ir.actions.act_window">
        <field name="name">Tipos de Transporte</field>
        <field name="res_model">tms.transport.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>