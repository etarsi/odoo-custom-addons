<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tms_stock_picking_form" model="ir.ui.view">
        <field name="name">tms.stock.picking.form</field>
        <field name="model">tms.stock.picking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="delivery_state"
                           widget="statusbar"
                           statusbar_visible="no,delivered,returned"/>
                </header>
                <sheet>
                    <!-- SOLO 2 SMART BUTTONS -->
                    <div class="oe_button_box" name="button_box">
                        <!-- Pickings relacionados -->
                        <button type="object"
                                name="action_open_pickings"
                                class="oe_stat_button"
                                icon="fa-truck"
                                attrs="{'invisible': [('picking_count', '=', 0)]}">
                            <field name="picking_count" widget="statinfo" string="Entrega"/>
                        </button>

                        <!-- Pedido de Venta -->
                        <button type="object"
                                name="action_open_sale"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                attrs="{'invisible': [('sale_count', '=', 0)]}">
                            <field name="sale_count" widget="statinfo" string="Venta"/>
                        </button>
                        
                        <!-- Facturas Relacionadas -->
                        <button type="object"
                                name="action_open_account_moves"
                                class="oe_stat_button"
                                icon="fa-file-excel-o"
                                attrs="{'invisible': [('account_move_count', '=', 0)]}">
                            <field name="account_move_count" widget="statinfo" string="Facturas"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <!-- tu layout existente -->
                    <group name="group_top" string="Información General">
                        <group>
                            <field name="partner_id"/>
                            <field name="codigo_wms"/>
                            <field name="account_move_ids" widget="many2many_tags"/>
                            <field name="picking_ids" widget="many2many_tags"/>
                            <field name="items_ids" widget="many2many_tags"/>
                            <field name="sale_id"/>
                            <field name="doc_origen"/>
                            <field name="amount_totals"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="fecha_envio_wms"/>
                            <field name="cantidad_bultos"/>
                            <field name="cantidad_lineas"/>
                            <field name="carrier_id"/>
                            <field name="user_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observaciones" name="observations_page">
                            <field name="observaciones"/>
                        </page>
                        <page string="info. Adicional" name="additional_info_page">
                            <group>
                                <group name="info_additional" string="Dirección">
                                    <field name="industry_id"/>
                                    <field name="ubicacion"/>
                                    <field name="contacto_calle"/>
                                    <field name="direccion_entrega"/>
                                    <field name="contacto_cp"/>
                                    <field name="contacto_ciudad"/>
                                    <field name="carrier_address"/>
                                </group>
                                <group name="info_status" string="Información de Estado">
                                    <field name="invoice_status"/>
                                    <field name="estado_digip"/>
                                    <field name="estado_despacho"/>
                                    <field name="fecha_despacho"/>
                                    <field name="observacion_despacho"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tms_stock_picking_tree" model="ir.ui.view">
        <field name="name">tms.stock.picking.tree</field>
        <field name="model">tms.stock.picking</field>
        <field name="arch" type="xml">
            <tree edit="true" default_order="fecha_envio_wms desc" js_class="selection_sum_list">
                <field name="name" optional="show"/>
                <field name="fecha_entrega" optional="show"/>
                <field name="fecha_envio_wms" widget="date" optional="show"/>
                <field name="codigo_wms" optional="show"/>
                <field name="doc_origen" optional="show"/>
                <field name="picking_ids" widget="many2many_tags" optional="show"/>
                <field name="account_move_ids" widget="many2many_tags" optional="show"/>
                <field name="amount_totals" optional="show"/>
                <field name="amount_nc_totals" optional="show"/>
                <field name="items_ids" widget="many2many_tags" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="cantidad_bultos" optional="show"/>
                <field name="cantidad_lineas" optional="show"/>
                <field name="observaciones" optional="show"/>
                <field name="invoice_status" widget="badge" optional="show" decoration-info="invoice_status == 'draft'" decoration-success="invoice_status == 'posted'" decoration-danger="invoice_status == 'cancel'" />
                <field name="estado_digip" optional="show" widget="badge" decoration-warning="estado_digip == 'done'" decoration-success="estado_digip == 'closed'" decoration-danger="estado_digip == 'error'" />
                <field name="estado_despacho" optional="show" widget="badge" decoration-info="estado_despacho in ('in_preparation', 'pending')" decoration-warning="estado_despacho == 'prepared'" decoration-success="estado_despacho == 'delivered'" decoration-danger="estado_despacho == 'void'" />
                <field name="delivery_state" optional="show" widget="badge" decoration-success="delivery_state == 'delivered'" decoration-warning="delivery_state == 'no'" decoration-danger="delivery_state == 'returned'" />
                <field name="fecha_despacho" optional="show" />
                <field name="observacion_despacho" optional="show"/>
                <field name="industry_id" optional="show"/>
                <field name="ubicacion" optional="show"/>
                <field name="carrier_id" optional="show"/>
                <field name="direccion_entrega" optional="show"/>
                <field name="contacto_calle" optional="show"/>
                <field name="contacto_cp" optional="show"/>
                <field name="contacto_ciudad" optional="show"/>
                <field name="company_id" optional="show"/>
                <field name="user_id" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- esta vista es para el que mirara las aprobaciones a realizar -->
    <record id="view_tms_stock_picking_search" model="ir.ui.view">
        <field name="name">tms.stock.picking.search</field>
        <field name="model">tms.stock.picking</field>
        <field name="arch" type="xml">
            <search string="Ruteo de Inventario">
                <field name="doc_origen"
                    string="Buscar por Doc. Origen"
                    filter_domain="[('doc_origen','ilike', self)]"/>

                <field name="codigo_wms"
                    string="Buscar por Código WMS"
                    filter_domain="[('codigo_wms','ilike', self)]"/>

                <field name="picking_ids"
                    string="Buscar por Referencia"
                    filter_domain="[('picking_ids.name','ilike', self)]"/>

                <field name="carrier_id"
                    string="Buscar por Transportista"
                    filter_domain="[('carrier_id.name','ilike', self)]"/>
                <field name="partner_id"
                    string="Buscar por Cliente"
                    filter_domain="['|', '|', ('partner_id.display_name', 'ilike', self), ('partner_id.ref', '=', self), ('partner_id.email', 'ilike', self)]"/>
                <separator/>
                <filter name="filter_digip_closed" string="WMS Cerrados" domain="[('estado_digip', '=', 'closed')]"
                        help="Filtrar las licencias que están enviado y recibido." />
                <filter name="filter_digip_done" string="WMS Enviados" domain="[('estado_digip', '=', 'done')]"
                        help="Filtrar las licencias que están Enviados." />
                <filter name="filter_digip_no" string="WMS No Enviados" domain="[('estado_digip', '=', 'no')]"
                        help="Filtrar las licencias que están No enviados." />
                <separator/>
                <!-- Filtro por estado  agrupado-->
                <filter name="filter_by_state_digip" string="Estado WMS"
                        context="{'group_by': 'estado_digip'}" />
                <filter name="filter_by_partner" string="Clientes"
                        context="{'group_by': 'partner_id'}" />
                <filter name="filter_by_state_despacho" string="Estado Despacho"
                        context="{'group_by': 'estado_despacho'}" />
                <separator/>
                <filter name="filter_by_delivery_state" string="Estado de Entrega"
                        context="{'group_by': 'delivery_state'}" />
                <filter name="filter_by_doc_origen" string="Doc. Origen"
                        context="{'group_by': 'doc_origen'}" />
                <filter name="filter_by_carrier_id" string="Transportista"
                        context="{'group_by': 'carrier_id'}" />
                <separator/>
                <filter name="filter_by_company" string="Compañía"
                        context="{'group_by': 'company_id'}" />
                <filter name="filter_by_industry_id" string="Despacho-Zona"
                        context="{'group_by': 'industry_id'}" />
                <filter name="filter_items_ids" string="Rubros"
                        context="{'group_by': 'items_ids'}" />
                <filter name="filter_by_invoice_status" string="Estado Factura"
                        context="{'group_by': 'invoice_status'}" />
            </search>
        </field>
    </record>

    <record id="action_tms_stock_picking" model="ir.actions.act_window">
        <field name="name">Ruteo de Inventario</field>
        <field name="res_model">tms.stock.picking</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_tms_stock_picking_search"/>
    </record>
</odoo>
