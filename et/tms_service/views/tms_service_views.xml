<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- FORMULARIO -->
    <record id="view_tms_service_form" model="ir.ui.view">
        <field name="name">tms.service.form</field>
        <field name="model">tms.service</field>
        <field name="arch" type="xml">
            <form string="Servicio de Transporte">
                <sheet>
                    <group name="group_service" string="InformaciÃ³n del Servicio de Transporte">
                        <group>
                            <field name="name" optional="show"/>
                            <field name="code" optional="show"/>
                            <field name="active" optional="hide"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTA DE LISTADO -->
    <record id="view_tms_service_tree" model="ir.ui.view">
        <field name="name">tms.service.tree</field>
        <field name="model">tms.service</field>
        <field name="arch" type="xml">
            <tree string="Servicio de Transporte" create="true" edit="true" delete="true" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_tms_service" model="ir.actions.act_window">
        <field name="name">Servicios de Transporte</field>
        <field name="res_model">tms.service</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>