<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="product_template_enhancement_form_view" model="ir.ui.view">
        <field name="name">product.template.enhancement.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
              <page name="Seasons" string="Temporadas">
                <field name="season_line_ids" widget="one2many">
                  <tree string="Temporadas">
                    <field name="season_id"/>
                    <field name="uxb"/>
                    <field name="bultos"/>
                    <field name="unidades_sueltas"/>
                  </tree>
                </field>
              </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>