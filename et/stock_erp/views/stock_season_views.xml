<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="stock_season_views" model="ir.ui.view">
      <field name="name">stock.season.tree</field>
      <field name="model">stock.season</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date_start"/>
          <field name="date_end"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="stock_season_form" model="ir.ui.view">
      <field name="name">stock.season.form</field>
      <field name="model">stock.season</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
              <group>
                <group>
                  <field name="name"/>
                  <field name="date_start"/>
                  <field name="date_end"/>
                  <field name="state"/>
                </group>
              </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- Acción para abrir la vista tree -->
    <record id="action_stock_season" model="ir.actions.act_window">
      <field name="name">Stock Season</field>
      <field name="res_model">stock.season</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- stock.season.line form view -->
    <record id="stock_season_line_form" model="ir.ui.view">
      <field name="name">stock.season.line.form</field>
      <field name="model">stock.season.line</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
              <group>
                <group>
                  <field name="season_id"/>
                  <field name="product_id"/>
                  <field name="bultos_inicial"/>
                  <field name="uxb"/>
                  <field name="unidades_inicial"/>
                </group>
              </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- stock.season.line tree view -->
    <record id="stock_season_line_tree" model="ir.ui.view">
      <field name="name">stock.season.line.tree</field>
      <field name="model">stock.season.line</field>
      <field name="arch" type="xml">
        <tree>
          <field name="season_id"/>
          <field name="product_id"/>
          <field name="bultos_inicial"/>
          <field name="uxb"/>
          <field name="unidades_inicial"/>
        </tree>
      </field>
    </record>

    <!-- Acción para abrir la vista tree de stock.season.line -->
    <record id="action_stock_season_line" model="ir.actions.act_window">
      <field name="name">Stock Season Lines</field>
      <field name="res_model">stock.season.line</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>