<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_license_form_view" model="ir.ui.view">
        <field name="name">hr.license.form</field>
        <field name="model">hr.license</field>
        <field name="arch" type="xml">
            <form string="Licencia del Empleado">
                <header>
                    <field name="state" widget="statusbar" 
                                        statusbar_visible="draft,pending,approved,rejected"
                                        statusbar_colors='{"draft":"blue", "pending":"orange", "approved":"success", "rejected":"red"}'/>
                    <button name="action_confirm"
                            type="object"
                            string="Confirmar"
                            icon="fa-check"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="btn-success"/>
                    <button name="action_approve"
                            type="object"
                            string="Aprobar"
                            icon="fa-check-circle"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <button name="action_reject"
                            type="object"
                            string="Rechazar"
                            icon="fa-times"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                </header>
                <sheet>
                    <group>
                        <group name="group_location_info" string="Información de Licencia">
                            <field name="employee_id" string="Empleado" required="True" 
                                    attrs="{'readonly': ['|', ('state', '!=', 'draft'), ('employee_id', '!=', False)]}"/>
                            <field name="license_type_id" string="Tipo de Licencia" required="True" 
                                    options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="start_date" string="Fecha de Inicio" required="True" 
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="end_date" string="Fecha de Fin" required="True" 
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="days_qty" string="Cantidad de Días" required="True" 
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="document" filename="document_name" string="Documento de Licencia" required="True" 
                                    widget="binary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="description" string="Descripción" required="True" 
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                </sheet>
                <!--DETALLE QUIEN  -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Tree de Licencias, filtrando por empleado -->
    <record id="hr_enhancement.view_hr_license_tree" model="ir.ui.view">
        <field name="name">hr.license.tree</field>
        <field name="model">hr.license</field>
        <field name="arch" type="xml">
            <tree delete="false" string="Licencias del Empleado">
                <field name="employee_id"/>
                <field name="license_type_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_qty"/>
                <field name="approver_id"/>
                <field name="state" widget="statusbar" 
                        statusbar_colors='{"draft":"blue", "pending":"orange", "approved":"green", "rejected":"red"}'/>
            </tree>
        </field>
    </record>
    
    <!-- Acción para mostrar solo las licencias del empleado -->
    <record id="action_my_licenses" model="ir.actions.act_window">
        <field name="name">Mis Licencias</field>
        <field name="res_model">hr.license</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field> <!-- Solo licencias del empleado actual -->
        <field name="view_id" ref="hr_enhancement.view_hr_license_tree"/>
    </record>

    <!-- Acción de licencia para aprobar -->
    <record id="action_approve_licenses" model="ir.actions.act_window">
        <field name="name">Licencias</field>
        <field name="res_model">hr.license</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_enhancement.view_hr_license_tree"/>
    </record>
</odoo>
