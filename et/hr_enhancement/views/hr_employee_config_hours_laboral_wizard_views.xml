<odoo>
    <record id="view_hr_employee_config_hours_laboral_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.config.hours.laboral.wizard.form</field>
        <field name="model">hr.employee.config.hours.laboral.wizard</field>
        <field name="arch" type="xml">
            <form string="Configuración Horaria Laborale">
                <sheet>
                    <group>
                        <group name="empleado" string="Datos del Empleado">
                            <field name="employee_id"/>
                            <field name="dni"/>
                            <field name="employee_type"/>
                        </group>
                        <group name="information" string="Informacion Laboral">
                            <field name="type_shift"/>
                            <field name="id_lector"/>
                            <field name="hr_works_schedule_id"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- ACCIÓN DEL WIZARD -->
    <record id="action_hr_employee_config_hours_laboral_wizard" model="ir.actions.act_window">
        <field name="name">Configuración Horaria Laboral</field>
        <field name="res_model">hr.employee.config.hours.laboral.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_employee_config_hours_laboral_wizard_form"/>
        <field name="target">new</field>
        <!-- default_employee_id se toma del empleado actual -->
        <field name="context">{'default_employee_id': active_id}</field>
    </record>
</odoo>
