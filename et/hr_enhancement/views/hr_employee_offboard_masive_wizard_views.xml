<!-- views/hr_employee_offboard_wizard_views.xml -->
<odoo>
    <record id="view_hr_employee_offboard_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.offboard.wizard.form</field>
        <field name="model">hr.employee.offboard.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar bajas de empleados">
                <sheet>
                    <group>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="employee_id"/>
                                <field name="date"/>
                                <field name="reason"/>
                                <field name="description"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_employee_offboard_wizard" model="ir.actions.act_window">
        <field name="name">Baja de Empleados Masivas</field>
        <field name="res_model">hr.employee.offboard.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
