<odoo>
    <!-- FORM DEL WIZARD -->
    <record id="view_hr_attendance_import_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.import.wizard.form</field>
        <field name="model">hr.attendance.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Asistencias">
                <group>
                    <field name="file"/>
                    <field name="type_import"/>
                </group>
                <footer>
                    <button name="action_import_attendance"
                            type="object"
                            string="Importar"
                            class="btn-primary oe_highlight"/>

                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_hr_attendance_import_wizard_form" model="ir.actions.act_window">
        <field name="name">Importar Asistencias</field>
        <field name="res_model">hr.attendance.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_attendance_import_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
