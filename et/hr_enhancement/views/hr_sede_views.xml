<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sede vista tree y form-->
    <record id="view_hr_sede_tree" model="ir.ui.view">
        <field name="name">hr.sede.tree</field>
        <field name="model">hr.sede</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
                <field name="direccion"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_sede_kanban" model="ir.ui.view">
        <field name="name">hr.sede.kanban</field>
        <field name="model">hr.sede</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="phone"/>
                <template id="kanban_template" name="template_name">
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div t-attf-class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><a type="edit"><field name="name"/></a></div>
                                    <div class="o_secondary"><field name="code" /></div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content" t-if="!selection_mode">
                                <div class="row o_kanban_card_upper_content">
                                    <div class="col-4 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="areas_laborales" type="action">Areas Laborales</button>
                                    </div>
                                    <div class="col-8 o_kanban_primary_right">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>
    </record>

    <record id="view_hr_sede_form" model="ir.ui.view">
        <field name="name">hr.sede.form</field>
        <field name="model">hr.sede</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="direccion"/>
                            <field name="phone"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_sede" model="ir.actions.act_window">
        <field name="name">Sedes</field>
        <field name="res_model">hr.sede</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera sede
            </p>
            <p>
                Las sedes te permiten organizar las ubicaciones fÃ­sicas de tu empresa.
            </p>
        </field>
    </record>
</odoo>
