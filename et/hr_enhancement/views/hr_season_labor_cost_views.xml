<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_season_labor_cost_tree" model="ir.ui.view">
        <field name="name">hr.season.labor.cost.tree</field>
        <field name="model">hr.season.labor.cost</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="hour_cost_normal"/>
                <field name="hour_cost_night"/>
                <field name="hour_cost_extra"/>
                <field name="hour_cost_holiday"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_season_labor_cost_form" model="ir.ui.view">
        <field name="name">hr.season.labor.cost.form</field>
        <field name="model">hr.season.labor.cost</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="active"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="hour_cost_normal" widget="monetary"/>
                        <field name="hour_cost_night" widget="monetary"/>
                        <field name="hour_cost_extra" widget="monetary"/>
                        <field name="hour_cost_holiday" widget="monetary"/>
                    </group>
                </sheet>
                <!--DETALLE QUIEN  -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
