<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_children_form_view" model="ir.ui.view">
        <field name="name">hr.employee.children.form</field>
        <field name="model">hr.employee.children</field>
        <field name="arch" type="xml">
            <form string="Hijos del Empleado">
                <header>
                    <field name="state" widget="statusbar"/>
                    <field name="employee_id" invisible="1"/>
                    <button name="%(hr.employee_form_view)d"
                            type="action"
                            string="Ver Padre/Madre"
                            icon="fa-user"
                            attrs="{'invisible': [('employee_id','=',False)]}"
                            context="{'form_view_ref':'hr.view_employee_form'}"
                            groups="base.group_user"
                            />
                </header>
                <sheet>
                    <group name="group_children_info" string="Información de Hijos">
                        <field name="name" string="Nombre Completo" required="True"/>
                        <field name="dni" string="DNI" required="True"/>
                        <field name="birth_date" string="Fecha de Nacimiento" required="True"/>
                        <field name="age" string="Edad" required="True"/>
                        <field name="gender" string="Género" required="True"/>
                        <field name="photo_dni" string="Foto DNI" required="True" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
