<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_attendance_tree_inherit_overtime" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit.overtime</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <!-- Insertamos después de la columna worked_hours -->
            <xpath expr="//field[@name='worked_hours']" position="attributes">
                <attribute name="sum">Horas Laborales</attribute>
            </xpath>
            <xpath expr="//field[@name='worked_hours']" position="before">
                <field name="create_lector" invisible="1"/>
                <field name="justification" attrs="{'required': [('create_lector', '=', False)]}" widget="text"/>
                <field name="day_of_week" sum="Día Trabajado" />
            </xpath>
            <xpath expr="//field[@name='worked_hours']" position="after">
                <field name="overtime" sum="Horas Extras" digits="[16, 0]"/>
                <field name="holiday_hours" widget="float_time" sum="Horas Feriado"/>
                <field name="employee_type" widget="badge" decoration-success="employee_type == 'employee'" decoration-danger="employee_type == 'eventual'"/>
                <field name="employee_type_shift" widget="badge" decoration-warning="employee_type_shift == 'day'" decoration-info="employee_type_shift == 'night'"/>
            </xpath>
        </field>
    </record>

    <!-- ====== VISTAS SOLO LECTURA ====== -->
    <record id="view_hr_attendance_tree_readonly_self" model="ir.ui.view">
        <field name="name">hr.attendance.tree.readonly.self</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <tree string="Mis Asistencias" create="false" edit="false" delete="false">
                <field name="employee_id" optional="show"/>
                <field name="employee_type" optional="show"/>
                <field name="check_in" optional="show"/>
                <field name="check_out" optional="show"/>
                <field name="worked_hours" optional="show" sum="Horas Trabajadas"/>
                <!-- Si agregaste estos campos personalizados, los podés mostrar también: -->
                <field name="overtime" optional="show" sum="Horas al 50%"/>
                <field name="holiday_hours" optional="show" sum="Horas al 100%"/>
            </tree>
        </field>
    </record>

    <!-- ====== ACCIÓN SOLO PARA CONSULTAR LAS PROPIAS ASISTENCIAS ====== -->
    <record id="action_my_attendance" model="ir.actions.act_window">
        <field name="name">Mis Asistencias</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree</field>
        <!-- Forzamos usar nuestras vistas read-only -->
        <field name="view_id" ref="hr_enhancement.view_hr_attendance_tree_readonly_self"/>
        <!-- Mostrar solo asistencias del empleado del usuario -->
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <!-- Al crear (si hubiera otro botón), preselecciona su empleado. Igual está bloqueado por las vistas. -->
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No se encontraron asistencias.
            </p>
            <p>
                Aquí se muestran únicamente tus registros de asistencia, en modo consulta.
            </p>
        </field>
    </record>

    <!-- heredar los filtros hr_attendance.hr_attendance_view_filter -->
    <record id="view_hr_report_attendance_filter" model="ir.ui.view">
        <field name="name">hr.report.attendance.filter</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='myattendances']" position="after">
                <filter name="employee_type" string="Empleado" domain="[('employee_type', '=', 'employee')]"/>
                <filter name="employee_type_eventual" string="Eventual" domain="[('employee_type', '=', 'eventual')]"/>
                <filter name="type_shift_day" string="Turno Día" domain="[('employee_id.type_shift', '=', 'day')]"/>
                <filter name="type_shift_night" string="Turno Noche" domain="[('employee_id.type_shift', '=', 'night')]"/>
            </xpath>
            <xpath expr="//filter[@name='employee']" position="after">
                <filter string="Tipo de Empleado" name="employee_type" context="{'group_by': 'employee_type'}"/>
                <filter name="employee_type_shift" string="Turno Asignado" context="{'group_by': 'employee_type_shift'}"/>
                <separator/>
            </xpath>
        </field>
    </record>
</odoo>
