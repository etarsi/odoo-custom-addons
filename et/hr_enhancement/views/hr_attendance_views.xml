<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ====== MODIFICACIÓN DE LA VISTA DE ASISTENCIAS EMPLEADOS ====== -->
    <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
        <field name="domain">[('employee_id.employee_type', '=', 'employee')]</field>
    </record>

    <record id="view_attendance_tree_inherit_overtime" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit.overtime</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <!-- Insertamos después de la columna worked_hours -->
            <xpath expr="//field[@name='worked_hours']" position="attributes">
                <attribute name="sum">Horas Laborales</attribute>
            </xpath>
            <xpath expr="//field[@name='worked_hours']" position="before">
                <field name="create_lector" optional="hide" />
                <field name="day_of_week" sum="Día Trabajado"  optional="show"/>
                <field name="justification" attrs="{'required': [('create_lector', '=', False)]}" widget="text" class="o_field_text" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='worked_hours']" position="after">
                <field name="overtime" sum="Horas Extras" widget="float_time" optional="show"/>
                <field name="holiday_hours" widget="float_time" sum="Horas Feriado" optional="show"/>
                <field name="employee_type_shift" widget="badge" decoration-warning="employee_type_shift == 'day'" decoration-info="employee_type_shift == 'night'" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- ====== VISTAS SOLO LECTURA ====== -->
    <record id="view_hr_attendance_tree_readonly_self" model="ir.ui.view">
        <field name="name">hr.attendance.tree.readonly.self</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <tree string="Mis Asistencias" create="false" edit="false" delete="false">
                <field name="employee_id" optional="show"/>
                <field name="employee_type" optional="show"/>
                <field name="check_in" optional="show"/>
                <field name="check_out" optional="show"/>
                <field name="worked_hours" optional="show" widget="float_time" sum="Horas Trabajadas"/>
                <field name="overtime" optional="show" widget="float_time" sum="Horas al 50%"/>
                <field name="holiday_hours" optional="show" widget="float_time" sum="Horas al 100%"/>
            </tree>
        </field>
    </record>

    <!-- ====== ACCIÓN SOLO PARA CONSULTAR LAS PROPIAS ASISTENCIAS ====== -->
    <record id="action_my_attendance" model="ir.actions.act_window">
        <field name="name">Mis Asistencias</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_enhancement.view_hr_attendance_tree_readonly_self"/>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No se encontraron asistencias.
            </p>
            <p>
                Aquí se muestran únicamente tus registros de asistencia, en modo consulta.
            </p>
        </field>
    </record>

    <!-- heredar los filtros hr_attendance.hr_attendance_view_filter -->
    <record id="view_hr_report_attendance_filter" model="ir.ui.view">
        <field name="name">hr.report.attendance.filter</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='myattendances']" position="after">
                <filter name="type_shift_day" string="Turno Día" domain="[('employee_id.type_shift', '=', 'day')]"/>
                <filter name="type_shift_night" string="Turno Noche" domain="[('employee_id.type_shift', '=', 'night')]"/>
            </xpath>
            <xpath expr="//filter[@name='employee']" position="after">
                <filter name="employee_type_shift" string="Turno Asignado" context="{'group_by': 'employee_type_shift'}"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <!-- ====== VISTAS DE ASISTENCIAS EVENTUALES ====== -->
    <record id="view_hr_attendance_tree_eventual" model="ir.ui.view">
        <field name="name">hr.attendance.tree.eventual</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">

            <tree string="Asistencias Eventuales" js_class="o_hr_attendance_eventual_tree">
                <field name="employee_id" optional="show" domain="[('employee_type', '=', 'eventual')]"/>
                <field name="check_in" optional="show"/>
                <field name="check_out" optional="show"/>
                <field name="create_lector" optional="hide" invisible="1"/>
                <field name="day_of_week" sum="Día Trabajado" optional="show"/>
                <field name="justification" attrs="{'required': [('create_lector', '=', False)]}" widget="text" class="o_field_text" optional="show"/>
                <field name="worked_hours" optional="show" digits="[16, 0]" sum="Horas Trabajadas"/>
                <field name="overtime" optional="show" digits="[16, 0]" sum="Horas al 50%"/>
                <field name="holiday_hours" optional="show" digits="[16, 0]" sum="Horas al 100%"/>
                <field name="employee_type_shift" widget="badge" decoration-warning="employee_type_shift == 'day'" decoration-info="employee_type_shift == 'night'" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH NUEVO PARA EVENTUALES -->
    <record id="hr_attendance_view_filter_eventual" model="ir.ui.view">
        <field name="name">hr_attendance_view_filter_eventual</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <search string="Asistencias Eventuales">
                <field name="check_in"/>
                <separator/>
                <filter name="check_out_false" string="No tiene registro de salida" domain="[('check_out', '=', False)]"/>
                <filter string="Fecha" name="check_in_filter" date="check_in"/>
                <separator/>
                <filter string="Últimos 3 meses" name="last_three_months"
                        domain="[('check_in', '>=', (context_today() - relativedelta(months=3)))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Empleado" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="groupby_checkin_month" string="Fecha" context="{'group_by': 'check_in:month'}"/>
                    <filter name="employee_type_shift" string="Turno Asignado" context="{'group_by': 'employee_type_shift'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ====== ACCIÓN DE ASISTENCIAS EVENTUALES ====== -->
    <record id="action_attendance_eventual" model="ir.actions.act_window">
        <field name="name">Asistencias Eventuales</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_enhancement.view_hr_attendance_tree_eventual"/>
        <field name="domain">[('employee_id.employee_type', '=', 'eventual')] </field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="views">
            [(ref('hr_enhancement.view_hr_attendance_tree_eventual'), 'tree'),
            (ref('hr.hr_attendance_view_form'), 'form')]
        </field>
        <field name="search_view_id" ref="hr_attendance_view_filter_eventual"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No se encontraron asistencias de empleados eventuales.
            </p>
            <p>
                Aquí se muestran únicamente tus registros de asistencia de empleados eventuales, en modo consulta.
            </p>
        </field>
    </record>
</odoo>
