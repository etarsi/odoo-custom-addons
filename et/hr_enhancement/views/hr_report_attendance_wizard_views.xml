<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="views_hr_report_attendance_wizard" model="ir.ui.view">
        <field name="name">hr.report.attendance.wizard.form</field>
        <field name="model">hr.report.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Asistencias" create="false" edit="false">
                <group name="reporte_asistencia" string="Reporte de Asistencias">
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="employee_ids" widget="many2many_tags"
                            domain="[('employee_type', 'in', employee_type == 'all' and ['employee','eventual'] or [employee_type]),
                                    ('type_shift', 'in', employee_type_shift == 'all' and ['day','night'] or [employee_type_shift])]"
                        />
                    </group>
                    <group>
                        <field name="employee_type" widget="radio"/>
                        <field name="employee_type_shift" widget="radio"/>
                    </group>                  
                </group>
                <footer>
                    <button name="action_generar_excel" type="object" string="Generar Excel" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_report_attendance_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Asistencias</field>
        <field name="res_model">hr.report.attendance.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="views_hr_report_attendance_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
