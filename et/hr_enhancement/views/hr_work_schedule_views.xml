<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_work_schedule_tree" model="ir.ui.view">
        <field name="name">hr.work.schedule.tree</field>
        <field name="model">hr.work.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type"/>
                <field name="hour_start" widget="time"/>
                <field name="hour_end" widget="time"/>
                <field name="hour_start_night" widget="time"/>
                <field name="hour_end_night" widget="time"/>
                <field name="state" widget="badge" decoration-success="state == 'activo'" decoration-danger="state == 'inactivo'"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_work_schedule_form" model="ir.ui.view">
        <field name="name">hr.work.schedule.form</field>
        <field name="model">hr.work.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="InformaciÃ³n General">
                        <field name="type"/>
                        <field name="hour_start" widget="time"/>
                        <field name="hour_end" widget="time"/>
                        <field name="state"/>
                    </group>
                    <group string="Horario Nocturno">
                        <field name="hour_start_night" widget="time"/>
                        <field name="hour_end_night" widget="time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
