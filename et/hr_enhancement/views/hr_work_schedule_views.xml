<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_work_schedule_tree" model="ir.ui.view">
        <field name="name">hr.work.schedule.tree</field>
        <field name="model">hr.work.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="hour_start" widget="float_time"/>
                <field name="hour_end" widget="float_time"/>
                <field name="hour_start_night" widget="float_time" />
                <field name="hour_end_night" widget="float_time" />
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-danger="state == 'inactive'"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_work_schedule_form" model="ir.ui.view">
        <field name="name">hr.work.schedule.form</field>
        <field name="model">hr.work.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="InformaciÃ³n General">
                            <field name="name"/>
                            <field name="type"/>
                            <field name="hour_start" widget="float_time"/>
                            <field name="hour_end" widget="float_time"/>
                            <field name="state"/>
                        </group>
                        <group string="Horario Nocturno" attrs="{'invisible':[('type','!=','eventual')]}" >
                            <field name="hour_start_night" widget="float_time"/>
                            <field name="hour_end_night" widget="float_time"/>
                        </group>
                    </group>
                </sheet>
                <!--DETALLE QUIEN  -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
