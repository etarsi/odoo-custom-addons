<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_license_form_view" model="ir.ui.view">
        <field name="name">hr.license.form</field>
        <field name="model">hr.license</field>
        <field name="arch" type="xml">
            <form string="Licencia del Empleado">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="%(hr.employee_form_view)d"
                            type="action"
                            string="Ver Empleado"
                            icon="fa-user"
                            attrs="{'invisible': [('employee_id','=',False)]}"
                            context="{'form_view_ref':'hr.view_employee_form'}"
                            groups="base.group_user"
                            />
                </header>
                <sheet>
                    <group name="group_location_info" string="InformaciÃ³n de Licencia">
                        <field name="license_type_id" string="Tipo de Licencia" required="True"/>
                        <field name="start_date" string="Fecha de Inicio" required="True"/>
                        <field name="end_date" string="Fecha de Fin" required="True"/>
                        <field name="document" filename="document_name" string="Documento" required="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
