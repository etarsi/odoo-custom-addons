<odoo>
    <!-- Form del wizard -->
    <record id="view_hr_attendance_create_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.create.wizard.form</field>
        <field name="model">hr.attendance.create.wizard</field>
        <field name="arch" type="xml">
            <form string="Registro de Asistencia">
            <group>
                <field name="employee_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <field name="check_date_hour"/>
                <field name="justificacion" placeholder="Opcional — se concatenará a 'justification' con /"/>
            </group>
            <footer>
                <button name="action_confirm" type="object" string="Confirmar" class="btn-primary"/>
                <button special="cancel" string="Cancelar"/>
            </footer>
            </form>
        </field>
    </record>

    <!-- Acción que abre el wizard como modal -->
    <record id="action_hr_attendance_create_wizard" model="ir.actions.act_window">
        <field name="name">Nueva asistencia</field>
        <field name="res_model">hr.attendance.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_attendance_create_wizard_form"/>
        <field name="target">new</field>
        <!-- (opcional) mostrar en el menú "Acción" de la vista lista de hr.attendance -->
        <field name="binding_model_id" ref="hr.model_hr_attendance"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
