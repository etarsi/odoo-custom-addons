<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payroll_salary_form" model="ir.ui.view">
        <field name="name">hr.payroll.salary.form</field>
        <field name="model">hr.payroll.salary</field>
        <field name="arch" type="xml">
            <form string="Planilla de Sueldo del Empleado">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                    <button name="action_confirm"
                            type="object"
                            string="Confirmar"
                            icon="fa-check"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="btn-success"/>
                    <button name="action_cancelled"
                            type="object"
                            string="Cancelar"
                            icon="fa-ban"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_paid"
                            type="object"
                            string="Marcar como Pagada"
                            icon="fa-check"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_draft"
                            type="object"
                            string="Restablecer a Borrador"
                            icon="fa-undo"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_load_employees"
                            type="object"
                            string="Cargar Empleados"
                            icon="fa-users"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <!-- Number -->
                        <h1 class="mt0" attrs="{'invisible':[('name', '=', '/')]}">
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="PLANILLA-AGOSTO/2025"/>
                        </h1>
                    </div>
                    <group name="group_info" string="Información de la Planilla">
                        <group>
                            <field name="employee_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="type_paid" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_start" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '=', 'mensual')]}"/>
                            <field name="date_end" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '=', 'mensual')]}"/>
                            <field name="pay_month" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '!=', 'mensual')]}"/>
                            <field name="pay_year" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '!=', 'mensual')]}"/>
                        </group>
                        <group>
                            <field name="total_amount"/>
                        </group>
                    </group>
                </sheet>
                <notebook>
                    <page name="employees_lines" string="Líneas de Empleados">
                        <field name="line_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="state" invisible="1"/>
                                <field name="payroll_id" invisible="1"/>
                                <field name="employee_id" domain="[('employee_type', '=', parent.employee_type)]"/>
                                <field name="worked_hours" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="overtime" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="holiday_hours" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="bonus" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="discount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="gross_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="net_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <!--DETALLE QUIEN  -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_hr_payroll_salary_tree" model="ir.ui.view">
        <field name="name">hr.payroll.salary.tree</field>
        <field name="model">hr.payroll.salary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_type"/>
                <field name="type_paid"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="pay_month"/>
                <field name="pay_year"/>
                <field name="total_amount"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" 
                        decoration-warning="state == 'confirmed'"
                        decoration-success="state == 'paid'" 
                        decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>
    <record id="action_hr_payroll_eventuales" model="ir.actions.act_window">
        <field name="name">Planillas de Sueldo Eventuales</field>
        <field name="res_model">hr.payroll.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_type', '=', 'eventual')]</field>
        <field name="context">{'default_employee_type': 'eventual'}</field>
    </record>
    <record id="action_hr_payroll_employees" model="ir.actions.act_window">
        <field name="name">Planillas de Sueldo Empleados</field>
        <field name="res_model">hr.payroll.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_type', '=', 'empleado')]</field>
        <field name="context">{'default_employee_type': 'empleado'}</field>
    </record>

</odoo>
