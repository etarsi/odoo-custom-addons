<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payroll_salary_form" model="ir.ui.view">
        <field name="name">hr.payroll.salary.form</field>
        <field name="model">hr.payroll.salary</field>
        <field name="arch" type="xml">
            <form string="Planilla de Sueldo del Empleado">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                    <button name="action_confirm"
                            type="object"
                            string="Confirmar"
                            icon="fa-check"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="btn-success"/>
                    <button name="action_cancelled"
                            type="object"
                            string="Cancelar"
                            icon="fa-ban"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_paid"
                            type="object"
                            string="Liquidar Planilla"
                            icon="fa-check"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_draft"
                            type="object"
                            string="Restablecer a Borrador"
                            icon="fa-undo"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_load_employees"
                            type="object"
                            string="Cargar Empleados"
                            icon="fa-users"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_clear_lines"
                            type="object"
                            string="Quitar Líneas de Empleados"
                            icon="fa-trash"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Planilla Eventual Turno Noche" bg_color="text-bg-danger" attrs="{'invisible': [('type_liquidacion_eventual', '!=', 'eventual_night')]}"/>
                    <widget name="web_ribbon" title="Planilla Eventual Turno Dia" bg_color="text-bg-info" attrs="{'invisible': [('type_liquidacion_eventual', '!=', 'eventual_day')]}"/>
                    <widget name="web_ribbon" title="Planilla Empleado Día" bg_color="text-bg-success" attrs="{'invisible': [('type_liquidacion_employee', '!=', 'employee_day')]}"/>
                    <div class="oe_title">
                        <h1 class="mt0" attrs="{'invisible':[('name', '=', '/')]}">
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="QUINCENA/MES/001/2025"/>
                        </h1>
                    </div>
                    <group name="group_info" string="Información de la Planilla">
                        <group>
                            <field name="employee_type" readonly="1"/>
                            <field name="type_paid" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_start" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '=', 'mensual')]}"/>
                            <field name="date_end" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '=', 'mensual')]}"/>
                            <field name="pay_month" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '!=', 'mensual')]}"/>
                            <field name="pay_year" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type_paid', '!=', 'mensual')]}"/>
                            <field name="currency_id" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                        </group>
                        <group>
                            <field name="type_liquidacion_eventual" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('employee_type', '!=', 'eventual')]}"/>
                            <field name="type_liquidacion_employee" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('employee_type', '!=', 'employee')]}"/>
                            <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="employees_lines" string="Líneas de Empleados">
                            <field name="line_ids" widget="one2many_list" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom" decoration-danger="employee_state == 'inactive'">
                                    <field name="employee_state" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="is_paid" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                                    <field name="payroll_id" invisible="1"/>
                                    <field name="currency_id" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                                    <field name="employee_id" domain="[('employee_type', '=', parent.employee_type)]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="worked_hours" optional="show" widget="float_time"/>
                                    <field name="overtime" optional="show" widget="float_time"/>
                                    <field name="holiday_hours" optional="show" widget="float_time"/>
                                    <field name="holidays" optional="hide" widget="float_time"/>
                                    <field name="bonus" widget="monetary" optional="show" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="gross_amount" widget="monetary" optional="show" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="discount" widget="monetary" optional="show" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="net_amount" widget="monetary" optional="show"/>

                                    <button name="action_paid" type="object" string="Liquidar" class="btn-primary oe_highlight"
                                            icon="fa-check" attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('is_paid', '=', True)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!--DETALLE QUIEN  -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_hr_payroll_salary_tree" model="ir.ui.view">
        <field name="name">hr.payroll.salary.tree</field>
        <field name="model">hr.payroll.salary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_type"/>
                <field name="type_paid"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="pay_month"/>
                <field name="pay_year"/>
                <field name="total_amount" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" 
                        decoration-warning="state == 'confirmed'"
                        decoration-success="state == 'paid'" 
                        decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>
    <record id="action_hr_payroll_eventuales" model="ir.actions.act_window">
        <field name="name">Planillas de Sueldo Eventuales</field>
        <field name="res_model">hr.payroll.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_type', '=', 'eventual')]</field>
        <field name="context">{'default_employee_type': 'eventual'}</field>
    </record>
    <record id="action_hr_payroll_employees" model="ir.actions.act_window">
        <field name="name">Planillas de Sueldo Empleados</field>
        <field name="res_model">hr.payroll.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_type', '=', 'employee')]</field>
        <field name="context">{'default_employee_type': 'employee'}</field>
    </record>
    <record id="view_hr_payroll_salary_line_form" model="ir.ui.view">
        <field name="name">hr.payroll.salary.line.form</field>
        <field name="model">hr.payroll.salary.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group name="information" string="Información Pago">
                            <field name="employee_id"/>
                            <field name="worked_days"/>
                            <field name="worked_hours" widget="float_time"/>
                            <field name="overtime" digits="[16, 0]"/>
                            <field name="holiday_hours" widget="float_time"/>
                            <field name="holidays"/>
                        </group>
                        <group name="paid" string="Información Pagada">
                            <field name="bonus" widget="monetary"/>
                            <field name="discount" widget="monetary"/>
                            <field name="gross_amount" widget="monetary"/>
                            <field name="net_amount" widget="monetary"/>
                            <field name="currency_id"/>
                            <field name="labor_cost_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
