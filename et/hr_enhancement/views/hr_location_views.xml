<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_location_form_view" model="ir.ui.view">
        <field name="name">hr.location.form</field>
        <field name="model">hr.location</field>
        <field name="arch" type="xml">
            <form string="Ubicación del Empleado">
                <sheet>
                    <group name="group_location_info" string="Información de Ubicación">
                        <field name="street"/>
                        <field name="street2"/>
                        <field name="city"/>
                        <field name="floor"/>
                        <field name="cp_code"/>
                        <field name="country_id"/>
                        <field name="state"/>
                        <field name="employee_id"/>
                    </group>
                    <group name="group_location_details" string="Detalles de Ubicación">
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                    <group name="group_location_upload" string="Subir Archivo de Ubicación">
                        <field name="document" filename="document_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
