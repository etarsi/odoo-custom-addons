<odoo>
    <record id="view_hr_holiday_custom_tree" model="ir.ui.view">
        <field name="name">hr.holiday.custom.tree</field>
        <field name="model">hr.holiday.custom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="is_public_holiday"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_holiday_custom_form" model="ir.ui.view">
        <field name="name">hr.holiday.custom.form</field>
        <field name="model">hr.holiday.custom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="is_public_holiday"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_holiday_custom" model="ir.actions.act_window">
        <field name="name">Feriados</field>
        <field name="res_model">hr.holiday.custom</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
