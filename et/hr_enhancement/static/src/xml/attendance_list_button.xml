<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-extend="ListView.buttons">
    <!-- Insertar nuestro botón después del botón Crear -->
    <t t-jquery="button.o_list_button_add" t-operation="after">
      <!-- OJO: las condiciones son JS, no Python -->
      <t t-if="widget && widget.modelName === 'hr.attendance' && (!widget.context || widget.context.add_attendance_wizard_button === true)">
        <button type="button" class="btn btn-secondary o_btn_attendance_wizard">
          Nueva asistencia (modal)
        </button>
      </t>
    </t>
  </t>
</templates>
