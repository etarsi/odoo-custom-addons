<odoo>
    <!-- Grupo HR Administrador -->
    <record id="group_hr_administrador" model="res.groups">
        <field name="name">HR Administrador</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('hr_enhancement.group_hr_supervisor'))]"/>
    </record>
    
    <!-- Empleado (self-service) -->
    <record id="group_hr_self_service" model="res.groups">
        <field name="name">Empleado (Self-Service)</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <!-- todos los usuarios internos pueden estar aquÃ­ -->
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Supervisor RR.HH. (ve asistencias de todos y reportes) -->
    <record id="group_hr_supervisor" model="res.groups">
        <field name="name">Supervisor RR.HH.</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('hr_enhancement.group_hr_self_service'))]"/>
    </record>
</odoo>
