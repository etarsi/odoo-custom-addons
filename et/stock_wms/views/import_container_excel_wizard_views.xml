<odoo>
    <!-- FORM DEL WIZARD -->
    <record id="view_import_container_excel_wizard_form" model="ir.ui.view">
        <field name="name">import.container.excel.wizard.form</field>
        <field name="model">import.container.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar contenedor desde Excel">
                <group>
                    <field name="fecha_llegada"/>
                    <field name="file" filename="nro_despacho"/>
                </group>
                <footer>
                    <button name="import_data"
                            type="object"
                            string="Importar"
                            class="btn-primary oe_highlight"/>

                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_import_container_excel_wizard_form" model="ir.actions.act_window">
        <field name="name">Importar Contenedor desde Excel</field>
        <field name="res_model">import.container.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_container_excel_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- MENU ITEM -->
    <menuitem
        id="menu_import_container_excel_wizard"
        name="Importar Contenedores"
        parent="wms_enhancement.wms_logo"
        action="action_view_import_container_excel_wizard_form"
        sequence="20"/>
</odoo>
