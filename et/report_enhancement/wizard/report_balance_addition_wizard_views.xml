<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- TRIAL BALANCE -->
    <record id="report_balance_addition_wizard" model="ir.ui.view">
        <field name="name">Report Balance Addition Wizard</field>
        <field name="model">report.balance.addition.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="main_info">
                    <field
                        name="company_id"
                        options="{'no_create': True}"
                        groups="base.group_multi_company"
                    />
                </group>
                <div>
                    <group name="filters">
                        <group name="date_range">
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                        <group name="other_filters">
                            <field name="hide_account_at_0" />
                        </group>
                    </group>
                    <group name="journal_filter">
                        <field name="journal_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="account_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </div>
                <footer>
                    <div>
                        <button
                            name="button_export_html"
                            string="View"
                            type="object"
                            default_focus="1"
                            class="oe_highlight"
                        />
                        o
                        <button
                            name="button_export_pdf"
                            string="Export PDF"
                            type="object"
                        />
                        o
                        <button
                            name="button_export_xlsx"
                            string="Export XLSX"
                            type="object"
                        />
                        o
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_report_balance_addition_wizard" model="ir.actions.act_window">
        <field name="name">Balance de Sumas y Saldos</field>
        <field name="res_model">report.balance.addition.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_balance_addition_wizard" />
        <field name="target">new</field>
    </record>

    <!-- MENU ITEM -->
    <menuitem id="menu_report_balance_addition_wizard"
              name="Balance de Sumas y Saldos"
              parent="account.menu_finance_reports"
              action="action_report_balance_addition_wizard"
              sequence="40"/>
</odoo>
