<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_stock_valorizado_wizard_form" model="ir.ui.view">
        <field name="name">report.stock.valorizado.wizard.form</field>
        <field name="model">report.stock.valorizado.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Stock Valorizado" create="false" edit="false">
                <group name="reporte_stock_valorizado" string="Reporte de Stock Valorizado">
                    <group>
                        <field name="price_list_id"/>
                    </group>             
                </group>
                <footer>
                    <button name="action_generar_excel" type="object" string="Generar Excel" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_stock_valorizado_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Stock Valorizado</field>
        <field name="res_model">report.stock.valorizado.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_stock_valorizado_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Menu de inventario / informes  -->
    <menuitem id="menu_report_stock_valorizado_wizard"
              name="Reporte de Stock Valorizado"
              parent="stock.menu_warehouse_report"
              action="action_report_stock_valorizado_wizard"
              sequence="160"/>
    
</odoo>
