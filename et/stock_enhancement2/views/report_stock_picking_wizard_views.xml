<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_stock_picking_wizard_form" model="ir.ui.view">
        <field name="name">report.stock.picking.wizard.form</field>
        <field name="model">report.stock.picking.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Pendientes" create="false" edit="false">
                <group name="reporte_stock_picking" string="Reporte de Pendientes">
                    <group>
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="rubro_select"/>
                        <field name="temporada"/>
                    </group>             
                </group>
                <footer>
                    <button name="action_generar_excel" type="object" string="Generar Excel" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_stock_picking_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Pendientes</field>
        <field name="res_model">report.stock.picking.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_stock_picking_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Menu de inventario / informes  -->
    <menuitem id="menu_report_stock_picking_wizard"
              name="Reporte de Pendientes"
              parent="stock.menu_warehouse_report"
              action="action_report_stock_picking_wizard"
              sequence="150"/>
    
</odoo>
