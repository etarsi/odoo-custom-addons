    <!-- VISTA TREE DE LOS INVENTARIOS -->
    <record id="stock_enhancement2.view_stock_picking_enhancement_tree" model="ir.ui.view">
        <field name="name">enhancement.stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <tree string="Ruteo de Pedidos" create="false" delete="false">
                <!-- campos base -->
                <field name="date_done" optional="show" string="Fecha de Envio al WMS"/>
                <field name="sale_id" string="Documento de Origen" optional="show"/>
                <field name="name" string="Referencia" optional="show" />
                <field name="partner_id" string="Cliente" optional="show" />
                <field name="carrier_id" string="Transportista/Método de entrega" optional="show" />
                <field name="r_contact_call" optional="show"/>
                <field name="r_contact_cp" optional="show" />
                <field name="r_contact_city" optional="show" />
                <field name="r_address" optional="show"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" 
                                    decoration-info="state == 'confirmed'" decoration-warning="state == 'assigned'" 
                                    decoration-secondary="state == 'waiting'" decoration-dark="state == 'draft'" optional="hide"/>
                <field name="company_id" optional="show"/>
            </tree>
        </field>
    </record>
    <!-- SEARCH de la vista -->
    <record id="stock_enhancement2.view_stock_picking_enhancement_search" model="ir.ui.view">
        <field name="name">stock.picking.enhancement.search</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <search string="Buscar Ruteo de Pedidos">
                <field name="name" string="Referencia"/>
                <separator/>
                <filter name="group_partner" string="Agrupar por Cliente" context="{'group_by':'partner_id'}"/>
            </search>
        </field>
    </record>
    <!-- ACCIÓN llamada por el botón del partner -->
    <record id="action_stock_picking_enhancement" model="ir.actions.act_window">
        <field name="name">Ruteo de Pedidos</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock_enhancement2.view_stock_picking_enhancement_tree"/>
        <field name="search_view_id" ref="stock_enhancement2.view_stock_picking_enhancement_search"/>
    </record>
</odoo>
