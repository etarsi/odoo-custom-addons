<odoo>
    <record id="view_sale_order_split_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.split.wizard.form</field>
        <field name="model">sale.order.split.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmación de Orden de Venta">

                <group>
                    <div style="color: grey; font-size: 16px">
                    ¿Desea confirmar el Pedido/Orden de Venta?
                    </div>
                    <!--
                    <field name="company_ids" invisible="1"/>
                    <field name="percentage" readonly="1"/>
                    -->
                </group>

                <footer>
                    <button name="action_split_sale_orders" string="Confirmar" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>
